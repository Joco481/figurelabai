7_8_Epot_radiaal

	\begin{tikzpicture}[line cap=round,line join=round,scale=0.9]
		% Grid extents (1 unit per square)
		\def\xmin{-0.6}\def\xmax{5.8}
		\def\ymin{-3.5}\def\ymax{4.5}
		
		% ===== LEFT: Q·Q_b > 0 =====
		\begin{scope}[shift={(0,0)}]
			% Grid
			\foreach \x in {-0.5,...,5.5} \draw[dashed,xmblue!70,thick] (\x,\ymin) -- (\x,\ymax);
			\foreach \y in {-3.5,...,4.5} \draw[dashed,xmblue!70,thick] (-0.5,\y) -- (5.5,\y);
			
			% Axes
			\draw[axis] (\xmin,0) -- (\xmax,0) node[right] {$r\,(\mathrm{m})$};
			\draw[axis] (0,\ymin) -- (0,\ymax) node[above] {$E_{\text{pot}}\,(\mathrm{J})$};
			
			% Origin
			\fill (0,0) circle (3pt) node[below left] {$0$};
			
			% Curve: y = A/(x+b) + c  (kept inside the box)
			\def\Al{3.0}\def\bl{0.55}\def\cl{0.05}
			\draw[xmgreen,ultra thick,domain=0.25:5.0,samples=140]
			plot ({\x},{\Al/(\x+\bl)+\cl});
			
			% Caption
			\node at (2.5,-4.8) {$Q\!\cdot\!Q_b>0$};
		\end{scope}
		
		% ===== RIGHT: Q·Q_b < 0 =====
		\begin{scope}[shift={(7.6,0)}]
			% Grid
			\foreach \x in {-0.5,...,5.5} \draw[dashed,xmblue!70,thick] (\x,\ymin) -- (\x,\ymax);
			\foreach \y in {-3.5,...,4.5} \draw[dashed,xmblue!70,thick] (-0.5,\y) -- (5.5,\y);
			
			% Axes
			\draw[axis] (\xmin,0) -- (\xmax,0) node[right] {$r\,(\mathrm{m})$};
			\draw[axis] (0,\ymin) -- (0,\ymax) node[above] {$E_{\text{pot}}\,(\mathrm{J})$};
			
			% Origin
			\fill (0,0) circle (3pt) node[above left] {$0$};
			
			% Curve: y = -A/(x+b)  (always below the x‑axis)
			\def\Ar{2.8}\def\br{0.40}
			\draw[xmgreen,ultra thick,domain=0.40:5.0,samples=160]
			plot ({\x},{-\Ar/(\x+\br)});
			
			% Caption
			\node at (2.5,-4.8) {$Q\!\cdot\!Q_b<0$};
		\end{scope}
	\end{tikzpicture}


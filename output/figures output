		\def\W{7.2}      % inner width of the tank
		\def\H{6.2}      % total inner height
		\def\ys{4.1}     % water surface height
		\def\yd{3.0}     % depth level of the point (dashed line)
		\def\xm{0.35}    % inner margin for the glass walls
		
		% ======= Water (fill) =======
		\fill[xmblue!20] (\xm,0.35) rectangle ({\W-\xm},\ys);
		% Water surface line
		\draw[xmblue!70, line width=1.2pt] (\xm,\ys) -- ({\W-\xm},\ys);
		
		% ======= Tank walls: left, right, bottom =======
		\draw[xmblue, line width=4.2pt]
		(\xm,0.35) -- (\xm,{\H-0.35})
		({\W-\xm},0.35) -- ({\W-\xm},{\H-0.35})
		(\xm,0.35) -- ({\W-\xm},0.35);
		
		% ======= Point at depth and dashed reference =======
		\draw[dashed, black!75, thick] (\xm,\yd) -- ({\W-\xm},\yd);
		\coordinate (M) at ({0.5*\W},\yd);
		\fill (M) circle (2.1pt);
		
		% ======= Depth arrow (h) from surface to the point =======
		\draw[<->, thick] ({0.5*\W},\ys) -- ({0.5*\W},\yd);
		\node[right] at ({0.5*\W}, {0.5*(\ys+\yd)}) {$h$};
		
		% ======= Labels =======
		\node[font=\Large\itshape] at ({0.5*\W}, {\ys+0.8}) {$p_0$};
		\node[font=\Large\itshape, anchor=west] at ({\xm+0.6}, 1.0)
		{$p = p_0 + h\cdot \rho \cdot g$};
		
	\end{tikzpicture}

6_2_a_archimedes

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		
		% ======= Tunables =======
		\def\W{7.2}      % inner width
		\def\H{6.2}      % inner height
		\def\ys{3.7}     % water surface y
		\def\xm{0.35}    % inner margin walls
		\def\R{1.05}     % sphere radius
		
		% ======= Water =======
		\fill[xmblue!20] (\xm,0.35) rectangle ({\W-\xm},\ys);
		\draw[xmblue!70, line width=1.2pt] (\xm,\ys) -- ({\W-\xm},\ys); % surface
		
		% ======= Tank walls =======
		\draw[xmblue, line width=4.2pt]
		(\xm,0.35) -- (\xm,{\H-0.35})
		({\W-\xm},0.35) -- ({\W-\xm},{\H-0.35})
		(\xm,0.35) -- ({\W-\xm},0.35);
		
		% ======= Floating sphere (center on surface) =======
		\coordinate (C) at ({0.5*\W},\ys);
		
		% submerged semicircle (lighter, semi-transparent)
		\path[fill=xmgreen!40,opacity=0.75]
		($(C)+(-\R,0)$) arc (180:360:\R) -- cycle;
		
		% emerged semicircle (darker)
		\path[fill=xmgreen!70]
		($(C)+(-\R,0)$) arc (180:0:\R) -- cycle;
		
		% rim + center dot
		\draw[xmgreen!60!black, line width=1.6pt] (C) circle (\R);
		\fill[black] (C) circle (2.1pt);
		
		% ======= Forces =======
		\draw[->, ultra thick, xmblue] (C) -- ++(0,2.1)
		node[right, xmblue, font=\large, xshift=3pt, yshift=1pt] {$\vec{F}_{\mathrm{opw}}$};
		\draw[->, ultra thick, xmred]  (C) -- ++(0,-2.2)
		node[right, xmred,  font=\large, xshift=3pt, yshift=-2pt] {$\vec{F}_{z}$};
		
	\end{tikzpicture}

6_2_torricelli

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		
		% ===== Tunables =====
		\def\W{7.8}      % inner width of tank
		\def\H{5.2}      % inner height
		\def\ys{2.70}    % water surface height
		\def\xm{0.35}    % wall inset
		\def\xt{4.05}    % tube center x
		\def\s{0.20}     % half spacing between legs (keep small)
		\def\loopH{5.10} % loop height above surface
		\def\h{4.5}     % water rise in left leg (must be < loopH)
		\def\colw{0.26}  % width of water column drawn inside left leg
		\def\tubew{4.2pt}% tube outline thickness
		
		% ===== Water in tank =====
		\fill[xmblue!20] (\xm,0.35) rectangle ({\W-\xm},\ys);
		\draw[xmblue!70, line width=1.2pt] (\xm,\ys) -- ({\W-\xm},\ys); % surface
		
		% ===== Tank walls =====
		\draw[xmblue, line width=4.2pt]
		(\xm,0.35) -- (\xm,{\H-0.35})
		({\W-\xm},0.35) -- ({\W-\xm},{\H-0.35})
		(\xm,0.35) -- ({\W-\xm},0.35);
		
		% ===== U-tube (rounded loop, narrow legs) =====
		\draw[xmblue, line width=\tubew, rounded corners=6pt]
		(\xt-\s,{\ys-0.1}) -- (\xt-\s,{\ys+\loopH}) -- (\xt+\s,{\ys+\loopH}) -- (\xt+\s,{\ys-0.1});
		
		% ===== Water column inside LEFT leg only =====
		% Draw a slim rectangle centered on the left-leg centerline (\xt-\s)
		\path[fill=xmblue!30]
		({\xt-\colw/2},\ys) rectangle ({\xt+\colw/2},{\ys+\h});
		
		% ===== Distance h (placed left of tube) =====
		\draw[<->, thick] ({\xt-1.00},\ys) -- ({\xt-1.00},{\ys+\h});
		\node[right] at ({\xt-1.00},{\ys+0.5*\h}) {$h$};
		
		% ===== Points A and B =====
		\fill ({\xm+1.10},\ys) circle (2.0pt) node[below,yshift=-4pt] {$A$};
		\fill ({\xt},\ys)     circle (2.0pt) node[below,yshift=-4pt] {$B$};
		
		% ===== p0 label =====
		\node[font=\itshape] at ({\W-\xm-0.8},{\ys+0.45}) {$p_0$};
		
	\end{tikzpicture}



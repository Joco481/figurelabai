		\draw[-latex, ultra thick, xmred] (Q3) -- (F13)
		node[pos=0.60, above right, xmred, font=\bfseries] {$\vec{F}_{13}$};
		\draw[-latex, ultra thick, black] (Q3) -- (FR)
		node[pos=0.55, right, yshift=-6pt, font=\bfseries] {$\vec{F}_{R}$};
		

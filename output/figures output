8_2_1_conventionele_stroom

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		% Uses your preamble styles (xmred, etc.)
		
		% --- Parameters ---
		\def\R{1.6}
		\def\L{7.0}
		\def\a{0.35}
		\def\yTop{3.0}
		\def\yConn{0.0}
		\def\xL{0}
		\pgfmathsetmacro{\xR}{\xL+\L}
		
				
		% ---------- CYLINDER ----------
		\fill[blue!15] (\xL,-\R) rectangle (\xR,\R);
		\fill[blue!15] (\xL,0) ellipse ({\a} and {\R});
		\fill[blue!15] (\xR,0) ellipse ({\a} and {\R});
		
		% outlines (left front solid, back dashed)
		\draw[blue,thick,dashed] (\xL,-\R) arc[start angle=270,end angle=90,
		x radius=\a, y radius=\R];
		\draw[blue,thick]        (\xL,\R)  arc[start angle=90,end angle=270,
		x radius=\a, y radius=\R];
		\draw[blue,thick]        (\xR,0) ellipse ({\a} and {\R});
		\draw[blue,thick]        (\xL,\R) -- (\xR,\R);
		\draw[blue,thick]        (\xL,-\R) -- (\xR,-\R);
		
		% side dots + labels
		\fill (\xL,\yConn) circle (2.2pt) node[above right] {$1$};
		\fill (\xR,\yConn) circle (2.2pt) node[above right] {$2$};
		
		% ---------- OUTER CIRCUIT (reversed current direction) ----------
		% top left segment (←)
		\draw[very thick,-latex] (2,\yTop) -- (-2,\yTop);
		% battery
		\draw (2,\yTop) to[battery1] (\xR-2,\yTop);
		% top right segment (←)
		\draw[very thick,-latex] (\xR+2,\yTop) -- (\xR-2,\yTop);
		% right vertical (↑ now)
		\draw[very thick,-latex] (\xR+2,\yConn) -- (\xR+2,\yTop);
		\draw (\xR,\yConn) -- (\xR+2,\yConn);
		% left vertical (↓ now)
		\draw[very thick,-latex] (-2,\yTop) -- (-2,\yConn);
		\draw (\xL,\yConn) -- (-2,\yConn);
		
		% ---------- PARTICLES (arrows mirrored horizontally) ----------
		\foreach \x/\y/\dx/\dy in {
			0.9/0.8/ 0.9/ 0.4,
			1.3/-0.7/ 1.2/ 0.2,
			2.2/ 0.2/-1.1/ 0.3,
			2.8/ 1.0/ 0.9/ 0.5,
			3.4/-0.6/ 1.0/-0.2,
			4.0/ 0.6/ 0.8/ 0.4,
			4.7/-0.9/-0.9/ 0.4,
			5.3/ 0.9/ 0.9/ 0.5,
			6.0/ 0.0/ 1.1/ 0.2,
			6.3/-0.8/ 1.0/ 0.1,
			3.6/ 0.0/-1.0/-0.3,
			5.0/ 0.2/-0.9/ 0.2
		}{
			\fill (\x,\y) circle (2pt);
			% flip horizontal component of the arrow:
			\draw[xmred,thick,-latex] (\x,\y) -- ++({-0.45*\dx},{0.45*\dy});
		}
		
		% ---------- LABEL + LONG ARROW (now →) ----------
		\node at (\xL+0.5*\L,2.05) {\large\textit{Conventionele stroom $I$}};
		\draw[very thick,-latex] (\xL+0.15*\L,1.85) -- (\xL+0.85*\L,1.85);
		
	\end{tikzpicture}

8_2_1_elektrische_stroom

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]

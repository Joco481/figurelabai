8_2_1_globaal

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		% needs: \usetikzlibrary{decorations.markings}
		
		% ======= shared knobs =======
		\def\R{1.45}
		\def\L{8.8}
		\def\a{0.40}
		\def\xL{0}
		\pgfmathsetmacro{\xR}{\xL+\L}
		\pgfmathsetmacro{\xA}{\xL+0.52*\L}
		\def\RA{1.44}
		\def\rA{0.65}
		\tikzset{backdash/.style={blue,very thick,dash pattern=on 3pt off 2pt}}
		
		% helper: cylinder
		\newcommand{\cylinder}{%
			\fill[blue!15] (\xL,-\R) rectangle (\xR,\R);
			\fill[blue!15] (\xL,0) ellipse ({\a} and {\R});
			\fill[blue!15] (\xR,0) ellipse ({\a} and {\R});
			\draw[blue,thick] (\xL,\R) -- (\xR,\R);
			\draw[blue,thick] (\xL,-\R) -- (\xR,-\R);
			\draw[backdash]   (\xL,-\R) arc[start angle=270,end angle=90, x radius=\a, y radius=\R];
			\draw[blue,thick] (\xL,\R)  arc[start angle=90,end angle=270, x radius=\a, y radius=\R];
			\draw[blue,thick] (\xR,0) ellipse ({\a} and {\R});
		}
		% helper: section A
		\newcommand{\sectionA}{%
			\fill[xmgreen!12] (\xA,0) ellipse ({\rA} and {\RA});
			\draw[backdash]   (\xA,0) ellipse ({\rA} and {\RA});
			\draw[blue,thick] (\xA,\RA) arc[start angle=90,end angle=270, x radius=\rA, y radius=\RA];
			\node at (\xA,0) {\large A};
		}
		
		% ======= TOP: Geen stroom =======
		\begin{scope}[shift={(0,3.4)}]
			\cylinder
			\sectionA
			\foreach \x/\y/\dx/\dy in {
				1.0/ 0.8/  0.9/ 0.3,
				1.8/ 0.1/ -1.0/ 0.2,
				2.7/-0.7/  0.3/ 1.0,
				3.5/ 0.3/  1.0/ 0.1,
				4.4/-0.9/ -1.1/-0.1,
				5.3/ 0.1/ -1.0/ 0.4,
				6.2/ 0.8/  0.1/ 1.0,
				7.2/ 0.0/  1.0/ 0.2,
				7.9/ 0.6/  0.0/ 1.0
			}{
				\fill (\x,\y) circle (2pt);
				\draw[xmred,thick,-latex] (\x,\y) -- ++({0.45*\dx},{0.45*\dy});
			}
			\node[below,yshift=-6pt] at (0.5*\L,-\R) {\Large\itshape Geen stroom};
		\end{scope}
		
		% ======= BOTTOM: Wel stroom =======
		\begin{scope}[shift={(0,-3.4)}]
			\cylinder
			\sectionA
			
			% --- charges on ends (cleaned up to avoid ellipse intersection) ---
			\def\minusHalf{0.18}   % half-length of '-' inside left face (|x - xL| <= \minusHalf < \a)
			\def\plusInset{0.1}   % inset from right rim so '+' is clearly inside (0 < \plusInset < \a)
			\foreach \yy in {0.9,0.2,-0.5} { % minus signs (left face)
				\draw[blue,thick] (\xL-\minusHalf,\yy) -- (\xL+\minusHalf,\yy);
			}
			\foreach \yy in {0.9,0.2,-0.5} { % plus signs (right face)
				\node[blue,scale=0.95] at (\xR-\plusInset,\yy) {$+$};
			}
			
			% particles (net drift purely rightward)
			\foreach \x/\y/\dx/\dy in {
				1.0/ 0.8/ 1.10/ 0.00,
				1.7/ 0.1/ 1.05/ 0.00,
				2.5/-0.7/ 1.15/ 0.00,
				3.3/ 0.4/ 1.10/ 0.00,
				4.1/-0.1/ 1.05/ 0.00,
				4.9/ 0.7/ 1.10/ 0.00,
				5.7/-0.6/ 1.12/ 0.00,
				6.5/ 0.2/ 1.08/ 0.00,
				7.3/-0.3/ 1.15/ 0.00
			}{
				\fill (\x,\y) circle (2pt);
				\draw[xmred,thick,-latex] (\x,\y) -- ++({0.45*\dx},{0.45*\dy});
			}
			\node[above,yshift=8pt] at (0.5*\L,\R) {\Large\itshape Wel stroom};
		\end{scope}
	\end{tikzpicture}

8_2_1_stroompijl

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		% --- knobs ---
		\def\W{10.8}   \def\H{7.2}    \def\m{0.6}
		\def\hL{4.1}   \def\elw{0.9}  \def\elbot{0.6} \def\eltop{6.2}
		\def\rion{0.28}
		
		% ---------- liquid & beaker ----------
		\fill[xmblue!15] (\m,0) rectangle (\W-\m,\hL);
		\draw[xmblue,very thick] (\m,0) -- (\W-\m,0) -- (\W-\m,\H);
		\draw[xmblue,very thick] (\m,\H) -- (\m,0);
		\draw[xmblue!60] (\m,\hL) -- (\W-\m,\hL);
		
		% ---------- electrodes (rectangles only for now) ----------
		\draw[fill=xmred,draw=xmred,thick] (\m+0.8,\elbot) rectangle (\m+0.8+\elw,\eltop);                % left +
		\draw[fill=xmblue,draw=xmblue,thick] (\W-\m-0.8-\elw,\elbot) rectangle (\W-\m-0.8,\eltop);         % right –
		
		% ---------- ions (draw BEFORE signs so signs stay on top) ----------
		\tikzset{ion+/.style={draw=xmred,fill=xmred,thick}, ion-/.style={draw=xmblue,fill=xmblue,thick}}
		\draw[ion+] (\m+2.8,2.15) circle (\rion); \node[white] at (\m+2.8,2.15) {\small $+$};
		\draw[xmred,very thick,-latex] (\m+2.9,2.15) -- ++(1.1,0);
		\draw[ion+] (\m+4.6,1.3) circle (\rion);  \node[white] at (\m+4.6,1.3) {\small $+$};
		\draw[xmred,very thick,-latex] (\m+4.7,1.3) -- ++(1.2,0);
		
		\draw[ion-] (\W-\m-3.7,3.1) circle (\rion); \node[white] at (\W-\m-3.7,3.1) {\small $-$};
		\draw[xmblue,very thick,-latex] (\W-\m-3.8,3.1) -- ++(-1.2,0);
		\draw[ion-] (\W-\m-5.3,1.9) circle (\rion); \node[white] at (\W-\m-5.3,1.9) {\small $-$};
		\draw[xmblue,very thick,-latex] (\W-\m-5.4,1.9) -- ++(-1.1,0);
		
		% ---------- electrode signs (THICK, drawn LAST) ----------
		\def\signlw{1.8pt}   % thickness of +/– strokes
		\def\signr{0.28}     % half-length of strokes
		\coordinate (Eplus) at (\m+0.8+0.5*\elw,\eltop-0.55);
		\coordinate (Eminus) at (\W-\m-0.8-0.5*\elw,\eltop-0.55);
		
		% plus sign (white cross)
		\draw[white,line width=\signlw] (Eplus)+(-\signr,0) -- +( \signr,0);
		\draw[white,line width=\signlw] (Eplus)+(0,-\signr) -- +(0,\signr);
		
		% minus sign (white bar)
		\draw[white,line width=\signlw] (Eminus)+(-\signr,0) -- +( \signr,0);
		
		% ---------- current arrow + label ----------
		\draw[xmred,ultra thick,-latex] ({\m+2.2},-1.0) -- ({\W-\m-2.2},-1.0);
		\node[below] at (0.5*\W,-1.0) {\Large\itshape stroompijl};
	\end{tikzpicture}


oefening_13_3

	\begin{tikzpicture}[line cap=round,line join=round,>=latex]
		% ---- tunables ----
		\def\nCols{8}      % B columns
		\def\sx{2.0}       % horizontal spacing
		\def\sy{1.7}       % vertical spacing
		\def\rB{0.58}      % B circle radius
		\pgfmathsetmacro{\xL}{0.0}
		
		% vertical extent for continuous E arrows
		\pgfmathsetmacro{\yTop}{  2.4*\sy}
		\pgfmathsetmacro{\yBot}{ -2.4*\sy}
		
		% ---- B field: evenly spaced rows (no big central gap) ----
		% rows at y = -1.5*sy, -0.5*sy, +0.5*sy, +1.5*sy
		\foreach \r in {-1.5,-0.5,0.5,1.5}{
			\pgfmathsetmacro{\y}{\r*\sy}
			\foreach \c in {0,...,\nCols}{
				\pgfmathsetmacro{\x}{\xL + \c*\sx}
				\draw[xmgreen,thick] (\x,\y) circle (\rB);
				\draw[xmgreen,thick] ({\x-0.75*\rB},{\y-0.75*\rB}) -- ({\x+0.75*\rB},{\y+0.75*\rB});
				\draw[xmgreen,thick] ({\x-0.75*\rB},{\y+0.75*\rB}) -- ({\x+0.75*\rB},{\y-0.75*\rB});
			}
		}
		
		% ---- E field: arrows centered BETWEEN B columns ----
		\foreach \k in {0,2,4,6}{
			\pgfmathsetmacro{\xe}{\xL + (\k+0.5)*\sx}
			\draw[kuaccent,very thick,-{Latex[length=7pt]}] (\xe,{\yTop}) -- (\xe,{\yBot});
		}
		\node[anchor=north] at ({\xL + (4+0.5)*\sx},{\yBot-0.25}) {$\vec{E}$};
		
		% ---- particle and velocity (fits neatly between two E arrows) ----
		\pgfmathsetmacro{\px}{\xL + (3+0.5)*\sx}
		\pgfmathsetmacro{\py}{0.0}
		\def\pr{0.48}
		\fill[xmdarkblue] (\px,\py) circle ({1.10*\pr});
		\fill[xmblue]     (\px,\py) circle (\pr);
		\draw[white,line width=2pt] ({\px-0.45*\pr},\py) -- ({\px+0.45*\pr},\py);
		
		\draw[very thick,xmblue,-{Latex[length=7pt]}] ({\px+\pr},\py) -- ++(2.0,0);
		\node[anchor=west] at ({\px+\pr+2.15},{\py+0.12}) {$\vec{v}$};
		
		% B label
		\node at ({\xL+\nCols*\sx-0.2},{1.5*\sy+0.2}) {$\vec{B}$};
	\end{tikzpicture}

oefening_13_5

	\begin{tikzpicture}[line cap=round,line join=round,>=latex]
		% --- lattice + ring params ---
		\def\sx{1.9}\def\sy{1.7}\def\rB{0.48}
		\def\nx{4}\def\ny{3}
		\def\Rout{3.05}\def\Rin{2.35}
		\coordinate (C) at (0,0);
		
		% --- uniform B field everywhere (draw first) ---
		\foreach \ix in {- \nx,...,\nx}{
			\foreach \iy in {- \ny,...,\ny}{
				\pgfmathsetmacro{\x}{\ix*\sx}
				\pgfmathsetmacro{\y}{\iy*\sy}
				\draw[xmgreen,thick] (\x,\y) circle (\rB);
				\draw[xmgreen,thick] ({\x-0.75*\rB},{\y-0.75*\rB}) -- ({\x+0.75*\rB},{\y+0.75*\rB});
				\draw[xmgreen,thick] ({\x-0.75*\rB},{\y+0.75*\rB}) -- ({\x+0.75*\rB},{\y-0.75*\rB});
			}
		}
		
		% --- orange ring: fill only the band (transparent), keep center visible ---
		\begin{scope}
			% annulus fill (between Rout and Rin) with transparency
			\fill[kuaccent!70!white, fill opacity=1, even odd rule]
			(C) circle (\Rout) (C) circle (\Rin);
			% crisp outlines
			\draw[kuaccent,line width=2.2pt] (C) circle (\Rout);
			\draw[kuaccent,line width=2.2pt] (C) circle (\Rin);
		\end{scope}
		
		% --- label ---
		\node[anchor=west] at (2.3,3.0) {$\vec{B}$};
	\end{tikzpicture}

oefening_15_2

	\begin{tikzpicture}[line cap=round,line join=round,>=latex]
		% ----- positions (tweak here) -----
		\pgfmathsetmacro{\Vone}{2.4}     % x of V1
		\pgfmathsetmacro{\pTwo}{5.0}     % y of p2  (bar)
		\pgfmathsetmacro{\pLow}{2.0}     % low-pressure line (2 bar)
		% choose V3 so that the isotherm pV=const through (V1,p2) hits (V3,2)
		\pgfmathsetmacro{\Vthree}{\Vone*\pTwo/\pLow}
		\pgfmathsetmacro{\K}{\Vone*\pTwo}   % isotherm constant p*V
		
		\begin{axis}[
			width=9.6cm, height=7.8cm,
			xmin=-0.6, xmax=8.6,
			ymin=-0.6, ymax=6.2,
			axis lines=middle,
			axis line style={-stealth,black,thick},
			xlabel={$V$}, ylabel={$p\;(\mathrm{bar})$},
			every axis x label/.style={at={(axis description cs:1,0)},anchor=west},
			every axis y label/.style={at={(axis description cs:0,1)},anchor=south},
			grid=both, grid style={xmblue!70,dashed,thick}, % full dashed grid like PNG
			xtick={0,\Vone,\Vthree},
			xticklabels={,{$V_1$},{$V_3$}},
			ytick={0,\pLow,\pTwo},
			yticklabels={0,2,{$p_2$}},                     % <-- no minus sign
			tick align=center,
			clip=false
			]
			
			% origin dot (as in PNG)
			\addplot[only marks,mark=*,mark size=2.2pt,black] coordinates {(0,0)};
			
			% state points 1,2,3 (black dots)
			\addplot[only marks,mark=*,mark size=3pt,black]
			coordinates {(\Vone,\pLow) (\Vone,\pTwo) (\Vthree,\pLow)};
			
			% green state numbers
			\node[xmgreen,below left]  at (axis cs:\Vone,\pLow) {\bfseries 1};
			\node[xmgreen,above left]  at (axis cs:\Vone,\pTwo) {\bfseries 2};
			\node[xmgreen,below left]  at (axis cs:\Vthree,\pLow) {\bfseries 3};
			
			% vertical process 1 -> 2 (constant V=V1)
			\draw[xmgreen,very thick,-{Latex[length=6pt]}]
			(axis cs:\Vone,\pLow) -- (axis cs:\Vone,\pTwo);
			
			% isotherm 2 -> 3 : p = K/x  with an arrow along the curve
			\addplot[domain=\Vone:\Vthree, samples=220, very thick, xmgreen,
			postaction={decorate,decoration={markings,
					mark=at position 0.55 with {\arrow{>}}}}] {\K/x};
			
			% "Isotherm proces" label
			\node[xmgreen,scale=1.05,rotate=-18]
			at (axis cs:{0.62*(\Vone+\Vthree)},{0.5*(\pLow+\pTwo)}) {\textit{Isotherm proces}};
			
			% red temperatures at the two pressure levels
			\node[xmred] at (axis cs:0.9,\pLow+0.2) {37$^\circ$C};
			\node[xmred] at (axis cs:1.2,\pTwo+0.2) {657$^\circ$C};
			
		\end{axis}
	\end{tikzpicture}


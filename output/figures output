		}
		
		% E label
		\node[xmgreen] at (\xL+0.58*\L,0.15) {$\vec{E}$};
		
		% --- velocity arrow U (red) ---
		\draw[xmred,ultra thick,->] (\xL+1.2,-2.0) -- (\xR-1.2,-2.0)
		node[midway,below] {$U$};
	\end{tikzpicture}


	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		% ----- knobs -----
		\def\L{8.2}          % total x-extent of the row
		\def\A{1.05}         % amplitude of the rope segment
		\def\lam{4.0}        % wavelength
		\def\dotr{2.2pt}     % dot radius
		\def\nFlatDots{4}    % dots on the flat part (after λ/4)
		
		\pgfmathsetmacro\kdeg{360/\lam}
		
		% Axes
		\draw[axis] (0,-1.2) -- (0,1.7) node[above] {$y$};
		\draw[axis] (0,0) -- (\L,0) node[below right] {$x$};
		
		% Wave part: from x=0 (y=+A) to x=λ/4 (y=0)
		% Use cosine so y(0)=A and y(λ/4)=0
		\draw[xmgreen,very thick,domain=0:\lam/4,samples=120,variable=\x]
		plot({\x},{\A*cos(\kdeg*\x)});
		
		% Flat rope to the right
		\draw[xmgreen,very thick] ({\lam/4},0) -- (\L,0);
		
		% Dots:
		% leftmost dot on y-axis at y=+A
		\fill (0,{\A}) circle (\dotr);
		% dot at the join (x=λ/4, y=0)
		\fill ({\lam/4},0) circle (\dotr);
		% evenly spaced dots on the flat part
		\foreach \j in {1,...,\nFlatDots}{
			\fill ({\lam/4 + \j*(\L-\lam/4)/(\nFlatDots+1)}, 0) circle (\dotr);
		}
		
		% Red upward arrow near the join (as in the PNG)
		\draw[vector,xmred] ({\lam/4 },0) -- ++(0,1.0);
		
		% Time label
		\node[right] at (\L,0) {$t=\tfrac{T}{4}$};
	\end{tikzpicture}


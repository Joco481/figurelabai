		\coordinate (F13) at ($(Q3)+( 2.4,-1.4)$);   % \vec F_{13}
		\coordinate (FR)  at ($(F23)+(F13)-(Q3)$);   % resultant tip
		
		% ===== dashed geometry (triangle + parallelogram for vector sum) =====
		\draw[dashed, thick] (Q1) -- (Q2) -- (Q3) -- (Q1);
		\draw[dashed, thick] (F23) -- (FR);
		\draw[dashed, thick] (F13) -- (FR);
				

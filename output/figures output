voorbeeld_3_4

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		
		% --- knobs ---
		\def\r{0.9}          % charge radius
		\def\ring{3pt}       % rim thickness
		\def\gap{7.0}        % distance between charge centers
		\def\pad{0.08}       % small gap from rim to arrow start
		\def\over{3.0}       % how far each arrow intrudes toward the middle
		
		% charge centers
		\coordinate (L) at (0,0);
		\coordinate (R) at (\gap,0);
		
		% ===== LEFT: + charge =====
		\fill[xmred!70] (L) circle (\r);
		\draw[xmred!50!black,line width=\ring] (L) circle (\r);
		% plus sign
		\draw[white,line width=6pt] ($(L)+(-0.45,0)$) -- ($(L)+(0.45,0)$);
		\draw[white,line width=6pt] ($(L)+(0,-0.45)$) -- ($(L)+(0,0.45)$);
		
		% blue arrow F_21 (to the right), starting just outside left rim
		\draw[ultra thick,-latex,xmblue]
		($(L)+(\r+\pad,0)$) -- ($(R)+(-\r-\over,0)$)
		node[pos=0.35,above=6pt,xmblue] {$\vec F_{21}$};
		
		% caption
		\node[below=29pt] at (L) {\itshape Lading 1};
		
		% ===== RIGHT: – charge =====
		\fill[xmblue!40] (R) circle (\r);
		\draw[xmblue!70!black,line width=\ring] (R) circle (\r);
		% minus sign
		\draw[white,line width=6pt] ($(R)+(-0.45,0)$) -- ($(R)+(0.45,0)$);
		
		% red arrow F_12 (to the left), starting just outside right rim
		\draw[ultra thick,-latex,xmred]
		($(R)+(-\r-\pad,0)$) -- ($(L)+(\r+\over,0)$)
		node[pos=0.65,above=6pt,xmred] {$\vec F_{12}$};
		
		% caption
		\node[below=29pt] at (R) {\itshape Lading 2};
		
	\end{tikzpicture}




			{sin(deg(x))};
			\node[below] at (rel axis cs:0.5,-0.25) {$c=0$};
		\end{axis}
		
		% ---- Top-right: c = pi/2 ----
		\begin{axis}[
			ownstyle,
			width=6cm, height=4cm,
			at={(7cm,0)},
			xmin=0, xmax=6.5,
			ymin=-1.2, ymax=1.2,
			xtick=\empty, ytick=\empty,
			xlabel={$t$},
			ylabel={$x$},
			clip=false
			]
			\addplot[xmgreen, very thick, domain=0:6.5, samples=200]
			{sin(deg(x + pi/2))};
			\node[below] at (rel axis cs:0.5,-0.25) {$c=\tfrac{\pi}{2}$};
		\end{axis}
		
		% ---- Bottom-left: c = pi ----
		\begin{axis}[
			ownstyle,
			width=6cm, height=4cm,
			at={(0,-5cm)},
			xmin=0, xmax=6.5,
			ymin=-1.2, ymax=1.2,
			xtick=\empty, ytick=\empty,
			xlabel={$t$},
			ylabel={$x$},
			clip=false
			]
			\addplot[xmgreen, very thick, domain=0:6.5, samples=200]
			{sin(deg(x + pi))};
			\node[below] at (rel axis cs:0.5,-0.25) {$c=\pi$};
		\end{axis}
		
		% ---- Bottom-right: c = 3pi/2 ----
		\begin{axis}[
			ownstyle,
			width=6cm, height=4cm,
			at={(7cm,-5cm)},
			xmin=0, xmax=6.5,
			ymin=-1.2, ymax=1.2,
			xtick=\empty, ytick=\empty,
			xlabel={$t$},
			ylabel={$x$},
			clip=false
			]
			\addplot[xmgreen, very thick, domain=0:6.5, samples=200]
			{sin(deg(x + 3*pi/2))};
			\node[below] at (rel axis cs:0.5,-0.25) {$c=\tfrac{3\pi}{2}$};
		\end{axis}
		
	\end{tikzpicture}
	

5_1_d

	\begin{tikzpicture}
		% --- parameters: amplitude A, vertical offset d, and a small phase to match the look
		\pgfmathsetmacro{\A}{1.0}
		\pgfmathsetmacro{\d}{1.60}
		\pgfmathsetmacro{\phi}{0.20}
		
		\begin{axis}[
			ownstyle,
			width=10cm, height=5.4cm,
			xmin=0, xmax=6.5,
			ymin=-0.3, ymax=2.6,
			xtick=\empty, ytick=\empty,
			xlabel={$t$},
			ylabel={$x$},
			clip=false
			]
			
			% --- shifted sinusoid: x(t) = d + A cos( t - phi )
			\addplot[xmgreen, very thick, no marks, samples=300, domain=0:6.5]
			{\d + \A*cos(deg(x-\phi))};
			
			% --- dashed centerline at y = d (start a bit right of the y-axis for a small gap)
			\addplot[black, dashed, thick] coordinates {(0.12,\d) (6.5,\d)};
			
			% --- red double arrow showing the vertical offset d (from baseline to centerline)
			\draw[<->, xmred, thick]
			(axis cs:0,0) -- node[midway,left] {$d$} (axis cs:0,\d);
			
		\end{axis}
	\end{tikzpicture}

5_1_veer

		\begin{tikzpicture}[scale=1.0]
		% Parameters
		\def\nCoils{12}        % number of coils
		\def\amplitude{1.0}    % sine amplitude
		\def\massR{0.4}        % mass radius
		\def\springX{3.0}      % spacing between springs
		\def\springTop{6.0}    % height of support bar
		
		% Support bar
		\fill[brown!80!black] (-0.5,\springTop) rectangle (3*\springX+1.5,\springTop+0.3);
		
		% y-axis
		\draw[axis] (0,0) -- (0,\springTop+0.8) node[left] {$x$};
		
		% Equilibrium line
		\draw[densely dashed] (-0.4,2.0) -- (3*\springX+1.5,2.0);
		\node[left] at (-0.4,2.0) {Evenwichts\\punt};
		
		% Function for spring drawing
		\newcommand{\drawspring}[3]{ % args: x position, bottom y, top y
			\pgfmathsetmacro{\kdeg}{360*\nCoils/(#3-#2)}
			\draw[xmblue,thick,domain=#2:#3,samples=400,variable=\y]
			plot({#1 + 0.4*sin(\kdeg*(\y-#2))},{\y});
		}
		
		% Draw three springs (compressed, equilibrium, stretched)
		% equilibrium
		\drawspring{\springX}{2.0}{\springTop};
		\fill[xmblue!60!black] (\springX,2.0) circle (\massR);
		% stretched
		\drawspring{2*\springX}{1.2}{\springTop};
		\fill[xmblue!60!black] (2*\springX,1.2) circle (\massR);
		% compressed
		\drawspring{3*\springX}{3.0}{\springTop};
		\fill[xmblue!60!black] (3*\springX,3.0) circle (\massR);
		
		% Oscillation sine wave
		\draw[xmgreen,very thick,domain=0:3*\springX+1,samples=200,variable=\x]
		plot({\x},{2.0+\amplitude*sin(180/\springX*\x)});
		
		% Arrows to sine points
		\draw[->,xmblue,thick] (2*\springX,1.2) -- ++(-1.0,0);
		\draw[->,xmblue,thick] (3*\springX,3.0) -- ++(-1.2,0);
		
		% Double arrow for amplitude
		\draw[<->,thick] (2*\springX+1.5,1.2) -- (2*\springX+1.5,3.0);
	\end{tikzpicture}
	

5_2_harmonische_ECB

	\begin{tikzpicture}[x=1cm,y=1cm,line cap=round,line join=round]
		% ---- Parameters ----
		\def\R{2.4}
		\def\gap{0.45}
		\def\A{\R}
		\def\T{8.5}
		\def\phi{35}
		\def\tmax{14.0}
		
		% Convenience
		\coordinate (C) at ({-(\R+\gap)},0);      % circle centre
		\def\xAxisX{0}
		\def\Ytop{\A} \def\Ybot{-\A}
		
		% Bounding box
		\path ({- \R - \gap - 1.0},-3.2) rectangle (\tmax+1.2,3.2);
		
		% ---------------- Axes ----------------
		\draw[axis] (\xAxisX,-3) -- (\xAxisX,3) node[above] {$x$};
		\draw[axis] (\xAxisX,0) -- (\tmax,0) node[right] {$t$};
		
		% ---------------- Dashed limit lines ----------------
		\draw[dashed] ({- \R - \gap - 0.6},\Ytop) -- (\tmax,\Ytop);
		\draw[dashed] ({- \R - \gap - 0.6},\Ybot) -- (\tmax,\Ybot);
		
		% ---------------- ECB circle and rotor ----------------
		\draw[line width=1.6pt,xmblue] (C) circle (\R);
		
		% rotor tip coordinate
		\coordinate (Rtip) at ($(C)+(\phi:\R)$);
		
		% rotor arrow
		\draw[->,xmred,ultra thick] (C) -- (Rtip) node[above right,inner sep=1pt]{\textit{rotor}};
		
		% φ0 arc
		\draw[thick] (C) ++(0:1.0) arc[start angle=0,end angle=\phi,radius=1.0];
		\node at ($(C)+({0.75*cos(\phi/2)},{0.75*sin(\phi/2)})$) {$\varphi_0$};
		
		% ---------------- Sine ----------------
		\draw[xmgreen,very thick,domain=0:\tmax,samples=200]
		plot (\x,{\A*sin(360*\x/\T + \phi)});
		
		% Start point of sine (green dot)
		\coordinate (Sstart) at (\xAxisX,{\A*sin(\phi)});
		\fill[xmgreen] (Sstart) circle (2.2pt);
		
		% dashed connector from rotor tip to sine start ---
		\draw[dashed] (Rtip) -- (Sstart);
		
		% dashed line from circle centre to axis origin
		\draw[dashed] (C) -- (\xAxisX,0);
		
		% ---------------- Labels ----------------
		\node[below] at ($(C)+(0,-\R-0.6)$) {\textit{ECB}};
	\end{tikzpicture}



5_3_veer_evenwichtspunt

	\begin{tikzpicture}[scale=1.0]
		% Parameters
		\def\nCoils{12}        % number of coils
		\def\massR{0.4}        % mass radius
		\def\springX{3.0}      % spacing between springs
		\def\springTop{6.0}    % height of support bar
		
		% Support bar
		\fill[brown!80!black] (-0.5,\springTop) rectangle (3*\springX+1.5,\springTop+0.3);
		
		% y-axis
		\draw[axis] (0,0) -- (0,\springTop+0.8) node[left] {$x$};
		
		% Equilibrium line
		\draw[densely dashed] (-0.4,2.0) -- (3*\springX+1.5,2.0);
		\fill (0,2.0) circle (2.5pt) node[left=7pt] {Evenwicht};
		\node[left=2pt] at (0.5,2.15) {$0$};
		
		% Function for spring drawing
		\newcommand{\drawspring}[3]{ % args: x pos, bottom y, top y
			\pgfmathsetmacro{\kdeg}{360*\nCoils/(#3-#2)}
			\draw[xmblue,thick,domain=#2:#3,samples=400,variable=\y]
			plot({#1 + 0.4*sin(\kdeg*(\y-#2))},{\y});
		}
		
		% Left: equilibrium
		\drawspring{\springX}{2.0}{\springTop};
		\fill[xmblue!60!black] (\springX,2.0) circle (\massR);
		\node[xmred,below=10pt] at (\springX,2.0) {$\vec{F}=0$};
		
		% Middle: stretched
		\drawspring{2*\springX}{1.0}{\springTop};
		\fill[xmblue!60!black] (2*\springX,1.0) circle (\massR);
		\draw[vector,xmred] (2*\springX,1.0) -- ++(0,1.2) node[midway,right=7pt] {$\vec{F}$};
		\node[right] at (2*\springX+0.8,0.8) {$x<0$};
		\node[right] at (2*\springX+0.8,0.3) {$F_x>0$};
		
		% Right: compressed
		\drawspring{3*\springX}{3.0}{\springTop};
		\fill[xmblue!60!black] (3*\springX,3.0) circle (\massR);
		\draw[vector,xmred] (3*\springX,3.0) -- ++(0,-1.2) node[midway,right] {$\vec{F}$};
		\node[right] at (3*\springX+0.8,3.2) {$x>0$};
		\node[right] at (3*\springX+0.8,2.7) {$F_x<0$};
	\end{tikzpicture}


5_4_veer_uitwijking

	\begin{tikzpicture}[scale=1.0]
		% Parameters
		\def\nCoils{12}        % number of coils
		\def\massR{0.4}        % mass radius
		\def\springX{3.0}      % spacing between springs
		\def\springTop{6.0}    % height of support bar
		
		% Support bar
		\fill[brown!80!black] (-0.5,\springTop) rectangle (2*\springX+1.5,\springTop+0.3);
		

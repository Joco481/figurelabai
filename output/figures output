		\pgfmathsetmacro{\A}{1.25}      % amplitude
		\pgfmathsetmacro{\P}{4.2}       % period along t-axis
		\pgfmathsetmacro{\k}{2*pi/\P}   % angular wavenumber
		\pgfmathsetmacro{\tzero}{3.2}   % start time (dot position)
		
		% --- Flat segment (left of the dot) ---

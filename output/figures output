	\begin{tikzpicture}
		
		% ---- Top graph: x1(t) ----
		\begin{axis}[
			ownstyle,
			width=9cm, height=4.6cm,
			xmin=0, xmax=6.4,
			ymin=-1.3, ymax=1.3,
			xtick=\empty, ytick=\empty,
			xlabel={$t$},
			ylabel={$x_1$},
			clip=false
			]
			% solid green sine
			\addplot[xmgreen, very thick, no marks, domain=0:6.4, samples=200]
			{sin(deg(x))};
			
			% --- single set of vertical dashed guides ---
			% start exactly at the top baseline (y=0), extend downward well past the box
			\addplot[black!70, dashed, thick] coordinates {(1.571, 1) (1.571, -5)};
			\addplot[black!70, dashed, thick] coordinates {(3.142, 0) (3.142, -4)};
			\addplot[black!70, dashed, thick] coordinates {(4.712, 0) (4.712, -4)};
			\addplot[black!70, dashed, thick] coordinates {(6.283, 0) (6.283, -4)};
		\end{axis}
		
		% ---- Bottom graph: x2(t) ----
		\begin{axis}[
			ownstyle,
			at={(0pt,-0.8cm)}, anchor=north west,   % small gap
			width=9cm, height=4.6cm,
			xmin=0, xmax=6.4,
			ymin=-1.3, ymax=1.3,
			xtick=\empty, ytick=\empty,
			xlabel={$t$},
			ylabel={$x_2$},
			clip=false
			]
			% anti-phase curve
			\addplot[xmgreen, very thick, no marks, domain=0:6.4, samples=200]
			{-sin(deg(x))};
			% (no dashed lines here)
		\end{axis}
		
	\end{tikzpicture}


5_1_a

			
	\begin{tikzpicture}
		\begin{axis}[
			ownstyle,
			width=10cm, height=5.4cm,
			xmin=0, xmax=6.7,
			ymin=-1.3, ymax=1.3,
			xtick=\empty, ytick=\empty,
			xlabel={$t$},
			ylabel={$x$},
			clip=false
			]
			
			% --- sinusoidal motion (starts near +a and decreases)
			\addplot[xmgreen, very thick, no marks, samples=300, domain=0:7]
			{cos(deg(x-0.5))};
			
			% --- dashed amplitude guides 
			\addplot[black, dashed, thick] coordinates {(0, 1) (7.1, 1)};
			\addplot[black, dashed, thick] coordinates {(0,-1) (4,-1)};
			
			% --- red labels "a" and "-a" at the left of the axis
			\node[red!80!black, anchor=east] at (axis cs:0,  1) {$a$};
			\node[red!80!black, anchor=east] at (axis cs:0, -1) {$-a$};
			
		\end{axis}
	\end{tikzpicture}


5_1_b

	\begin{tikzpicture}
		% choose where the first maximum is and the period
		\pgfmathsetmacro{\tOne}{1.0}   % t1 (first maximum)
		\pgfmathsetmacro{\Tper}{4.8}   % period T
		\pgfmathsetmacro{\tTwo}{\tOne+\Tper} % t2 (next maximum)
		
		\begin{axis}[
			ownstyle,
			width=10cm, height=5.4cm,
			xmin=0, xmax=7,
			ymin=-1.3, ymax=1.3,
			xtick=\empty, ytick=\empty,
			xlabel={$t$},
			ylabel={$x$},
			clip=false
			]
			
			% sinusoid with maxima at t1 and t2
			% x(t) = cos( (2π/T) (t - t1) )
			\addplot[xmgreen, very thick, no marks, samples=400, domain=0:7]
			{cos(deg((2*pi/\Tper)*(x-\tOne)))};
			
			% dashed verticals at maxima (t1, t2)
			% start slightly below top, end slightly below axis (style like your PNG)
			\addplot[black!70, dashed, thick] coordinates {(\tOne,  1.05) (\tOne, -1.15)};
			\addplot[black!70, dashed, thick] coordinates {(\tTwo,  1.05) (\tTwo, -1.15)};
			
			% labels t1, t2 just under the axis
			\node[xmred, below] at (axis cs:\tOne+0.2,0.5) {$t_1$};
			\node[xmred, below] at (axis cs:\tTwo+0.2,0.5) {$t_2$};
			
			% red period arrow from t1 to t2
			\draw[<->, xmred, thick]
			(axis cs:\tOne,-1.05) -- node[midway, below] {$T$} (axis cs:\tTwo,-1.05);
			
		\end{axis}
	\end{tikzpicture}
	
5_1_c

	\begin{tikzpicture}
		
		% ---- Top-left: c = 0 ----

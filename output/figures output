8_3_6_kring_weerstand

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		
		% ================= LEFT: circuit =================
		\begin{scope}[shift={(0,0)}]
			% geometry
			\def\ytop{1.6}
			\def\ybot{0}
			\def\hR{0.35}   % half height of resistor box
			
			% frame / wires
			\draw[thick] (0,\ybot) -- (0,\ytop);                % left riser
			\draw[thick] (0,\ytop) -- (0.4,\ytop)               % left top short
			-- (5.8,\ytop) -- (5.8,\ybot)        % top to right, down
			-- (0,\ybot);                        % bottom back to left
			
			% resistor 1 (rectangle on top wire)
			\draw[thick,fill=white] (0.4,\ytop-\hR) rectangle (2.2,\ytop+\hR);
			% small wire & dots around R1
			\fill (0.4,\ytop) circle (2.2pt) node[above left=2pt] {\small $F$};
			\fill (2.2,\ytop) circle (2.2pt) node[above right=2pt]    {\small $E$};
			
			\draw[thick,fill=white] (3.6,\ytop-\hR) rectangle (5.2,\ytop+\hR);

			\draw[thick,fill=white] (3.6,\ytop-\hR) rectangle (5.2,\ytop+\hR);
			\fill (5.2,\ytop) circle (2.2pt) node[above right=2pt] {\small $C$};
			
			% short segment, dot D, resistor 2, dot C
			\draw[thick] (2.2,\ytop) -- (3.3,\ytop);
			\fill (3.6,\ytop) circle (2.2pt) node[above left=2pt]    {\small $D$};
			
			
			% bottom wire with battery in the middle
			\def\xa{2.7} \def\xb{3.4}
			\draw[thick] (0,\ybot) -- (\xa,\ybot);
			% battery (plates vertical along the horizontal wire)
			\draw (\xa,\ybot) to[battery1] (\xb,\ybot);
			\draw[thick] (\xb,\ybot) -- (5.8,\ybot);
			
			% dots and labels A,B on bottom wire
			\fill (\xa,\ybot) circle (2.2pt) node[above=2pt] {\small $A$};
			\fill (\xb,\ybot) circle (2.2pt) node[above=2pt] {\small $B$};
			
		\end{scope}
		
		% ================= RIGHT: potential graph =================
		\begin{scope}[shift={(9.2,-0.1)}]
			% axes
			\draw[axis] (0,0) -- (7.2,0);
			\draw[axis] (0,0) -- (0,3.2) node[above] {$E_{pot}$};
			
			% x-positions and levels
			\def\xa{0.0} \def\xb{1.0} \def\xc{2.6} \def\xd{3.8} \def\xe{5.2} \def\xf{6.4}
			\def\H{2.6}  \def\L{1.2}
			
			% potential profile: A→B rise, B→C flat, C→D drop, D→E flat, E→F drop
			\draw[xmgreen,very thick]
			(\xa,0) -- (\xb,\H) -- (\xc,\H) -- (\xd,\L) -- (\xe,\L) -- (\xf,0);
			
			% dashed verticals to the curve
			\draw[dashed,black!70,thick] (\xb,0) -- (\xb,\H);
			\draw[dashed,black!70,thick] (\xc,0) -- (\xc,\H);
			\draw[dashed,black!70,thick] (\xd,0) -- (\xd,\L);
			\draw[dashed,black!70,thick] (\xe,0) -- (\xe,\L);
			\draw[dashed,black!70,thick] (\xf,0) -- (\xf,0.05); % tiny tick at F
			
			% baseline dots + labels (on x-axis, like the PNG)
			\foreach \x/\lab in {\xa/A,\xb/B,\xc/C,\xd/D,\xe/E,\xf/F}{
				\fill (\x,0) circle (2.2pt) node[below=2pt] {$\lab$};
			}
		\end{scope}
		
	\end{tikzpicture}



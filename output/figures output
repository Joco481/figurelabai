5_11_tvast
	
	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		
		% ===== Common settings =====
		\pgfmathsetmacro{\A}{0.95}
		\pgfmathsetmacro{\P}{3.20}
		\pgfmathsetmacro{\k}{2*pi/\P}
		\pgfmathsetmacro{\phiOld}{pi/2}    % peak at x=0
		\pgfmathsetmacro{\phiShift}{0.80}  % left shift
		\pgfmathsetmacro{\phiNew}{\phiOld+\phiShift}
		\pgfmathsetmacro{\Xmax}{12.2}
		\def\nDots{0,...,10}
		
		% --- zero-crossings for each panel/wave ---
		\pgfmathsetmacro{\Xcap}{11.0}
		\pgfmathtruncatemacro{\nTop}{floor((\k*\Xcap + \phiNew)/pi)}
		\pgfmathsetmacro{\xEndTop}{(\nTop*pi - \phiNew)/\k}
		\pgfmathtruncatemacro{\nBot}{floor((\k*\Xcap + \phiOld)/pi)}
		\pgfmathsetmacro{\xEndBot}{(\nBot*pi - \phiOld)/\k}
		
		% ================= TOP (unchanged) =================
		\draw[axis] (0,3.2) -- (0,6.9) node[above] {$y$};
		\draw[axis] (0,5.05) -- (\Xmax,5.05) node[right] {$x$};
		
		\draw[xmgreen,line width=3pt,samples=350,domain=0:\xEndTop,variable=\x]
		plot ({\x},{5.05 + \A*sin(deg(\k*\x+\phiNew))});
		\draw[xmgreen,line width=3pt] (\xEndTop,5.05) -- (\Xmax-0.2,5.05);
		
		\foreach \i in \nDots {
			\pgfmathsetmacro{\xx}{\i*\P/4}
			\pgfmathsetmacro{\yOld}{5.05 + \A*sin(deg(\k*\xx+\phiOld))}
			\pgfmathsetmacro{\yNew}{5.05 + \A*sin(deg(\k*\xx+\phiNew))}
			\fill (\xx,\yNew) circle (2.2pt);
			\pgfmathsetmacro{\L}{0.85}
			\pgfmathsetmacro{\dY}{\yNew-\yOld}
			\ifdim \dY pt>0pt
			\draw[vector] (\xx,\yNew) -- ++(0,-\L); % reversed arrows
			\else
			\draw[vector] (\xx,\yNew) -- ++(0,\L);
			\fi
		}
		\node at (\Xmax-1.1,4.35) {$t\!\cdot\!v_g$};
		
		% ================= BOTTOM (dark wave splices at its own zero) =================
		\begin{scope}[yshift=-1.8cm]
			\draw[axis] (0,0.1) -- (0,3.8) node[above] {$y$};
			\draw[axis] (0,1.95) -- (\Xmax,1.95) node[right] {$x$};
			
			% dark/original wave to its zero-crossing, then flat tail
			\draw[xmgreen,line width=3pt,samples=350,domain=0:\xEndBot,variable=\x]
			plot ({\x},{1.95 + \A*sin(deg(\k*\x+\phiOld))});
			\draw[xmgreen,line width=3pt] (\xEndBot,1.95) -- (\Xmax-0.2,1.95);
			
			% light, shifted copy (trimmed but doesn't need to splice)
			\draw[xmgreen!60,line width=1.2pt,samples=350,domain=0:\xEndBot,variable=\x]
			plot ({\x},{1.95 + \A*sin(deg(\k*\x+\phiNew))});
			
			% dots on the dark wave at x = n*P/4
			\foreach \i in \nDots {
				\pgfmathsetmacro{\xx}{\i*\P/4}
				\pgfmathsetmacro{\yy}{1.95 + \A*sin(deg(\k*\xx+\phiOld))}
				\fill (\xx,\yy) circle (2.2pt);
			}
		\end{scope}
		
	\end{tikzpicture}
	

7_6_veldsterktes

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		\tikzset{
			midarrow/.style={
				postaction={decorate},
				decoration={markings, mark=at position 0.60 with {\arrow{>}}}
			}
		}
		
		% ================= LEFT: weaker -> stronger =================
		\node[align=left] at (-4.5,1.8) {\textit{Zwakker veld}};
		\node[align=left] at (-0.4,1.8) {\textit{Sterker veld}};
		
		% compress width: start at -4.5, end at 1.5
		\foreach \yL/\yR in {1.3/0.9, 0.65/0.45, 0/0, -0.65/-0.45, -1.3/-0.9} {
			\draw[xmgreen,thick,midarrow]
			(-4.5,\yL) .. controls (-2.5,\yL+0.1) and (0.0,\yR-0.1) .. (1,\yR);
		}
		
		% ================= RIGHT: homogeen veld =================
		\node at (5.4,1.8) {\textit{Homogeen veld}};
		
		% negative plate
		\draw[fill=red!50,draw=brown!80!black,thick,rounded corners=3pt]
		(2.3,-1.6) rectangle (2.9,1.6);
		\foreach \y in {-1.2,-0.7,-0.2,0.3,0.8,1.3} {
			\node[circle,fill=red!70,inner sep=2.3pt] at (2.6,\y) {\textcolor{white}{\Large $-$}};
		}
		
		% positive plate
		\draw[fill=xmblue!50,draw=xmblue!80!black,thick,rounded corners=3pt]
		(6.2,-1.6) rectangle (6.8,1.6);
		\foreach \y in {-1.2,-0.7,-0.2,0.3,0.8,1.3} {
			\node[circle,fill=xmblue,inner sep=2.3pt] at (6.5,\y) {\textcolor{white}{\Large $+$}};
		}
		
		% uniform field lines (pointing left: + to –)
		\tikzset{midarrowL/.style={
				postaction={decorate},
				decoration={markings, mark=at position 0.58 with {\arrow{<}}}
		}}
		\foreach \y in {1.0,0.5,0,-0.5,-1.0} {
			\draw[xmgreen,thick,midarrowL] (2.9,\y) -- (6.2,\y);
		}
		
	\end{tikzpicture}
	


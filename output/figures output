7_4_radiaal

	\begin{tikzpicture}[scale=1.0]
		
		% --- helper: visual arrow length ~ 1/r (tweak 1.6 and 2.1 if needed)
		\newcommand{\lenE}[1]{1.6/#1}
		\newcommand{\lenF}[1]{2.1/#1}
		
		% ================= LEFT: +Q =================
		\begin{scope}
			% central charge
			\node[circle,fill=xmblue,minimum size=16pt,inner sep=0pt] (Qp) at (0,0) {\textcolor{white}{\Large $+$}};
			\node[below=2pt of Qp] {$Q$};
			
			% angles / radii chosen to mimic the PNG (irregular & varied)
			\foreach \ang/\r in {180/2.1,155/2.3,120/2.0,75/2.6,20/2.2,-15/2.4,-55/2.0,-115/2.2} {
				\coordinate (T) at (\ang:\r);
				% dashed guide
				\draw[dashed,black!70,thick] (Qp) -- (T);
				
				% lengths (visual scaling)
				\pgfmathsetmacro{\LE}{\lenE{\r}}
				\pgfmathsetmacro{\LF}{\lenF{\r}}
				
				% E near the test charge, slightly shorter
				\draw[vector,xmgreen] ($(0,0)+(\ang:{\r-\LE-0.12})$) -- ++(\ang:\LE);
				
				% test charge (draw after E so E isn't hidden)
				\node[circle,fill=white,draw=xmblue,very thick,inner sep=0.9pt,font=\scriptsize] at (T) {$+$};
				
				% F from the test charge, a bit longer
				\draw[vector,xmred] (T) -- ++(\ang:\LF);
			}
			
			% labels near a representative pair
			\node[xmgreen] at (42:1.45) {$\vec{E}$};
			\node[xmred]   at (62:2.25) {$\vec{F}$};
		\end{scope}
		
		% ================= RIGHT: −Q =================
		\begin{scope}[xshift=7.2cm]
			% central charge
			\node[circle,fill=red!70,minimum size=16pt,inner sep=0pt] (Qm) at (0,0) {\textcolor{white}{\Large $-$}};
			\node[below=2pt of Qm] {$Q$};
			
			% positions chosen to resemble PNG
			\foreach \ang/\r in {0/2.3,30/1.9,65/2.4,95/2.1,140/2.2,200/2.5,245/2.0,300/2.2} {
				\coordinate (T) at (\ang:\r);
				\draw[dashed,black!70,thick] (Qm) -- (T);
				
				\pgfmathsetmacro{\LE}{\lenE{\r}}
				\pgfmathsetmacro{\LF}{\lenF{\r}}
				
				% E: from test charge inward (shorter)
				\draw[vector,xmgreen] (T) -- ++(\ang+180:\LE);
				
				% test charge on top so the small tail is hidden nicely
				\node[circle,fill=white,draw=xmblue,very thick,inner sep=0.9pt,font=\scriptsize] at (T) {$+$};
				
				% F: inward too, start a hair inside so it doesn't sit exactly on E
				\draw[vector,xmred] ($(T)+(\ang+180:0.18)$) -- ++(\ang+180:\LF);
			}
			
			\node[xmgreen] at (175:1.35) {$\vec{E}$};
			\node[xmred]   at (215:1.65) {$\vec{F}$};
		\end{scope}
		
		% ================= Legend =================
		\node[below] at (3.6,-3.25) {%
			\tikz[baseline=-0.6ex]
			\node[circle,fill=white,draw=xmblue,very thick,inner sep=0.9pt,font=\scriptsize] {$+$};
			\, = positieve testlading};
		
	\end{tikzpicture}

7_5_dipool_vectorsom

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		
		% --- geometry (move these three points if needed) ---
		\coordinate (Q1) at (-3.2,0.9);
		\coordinate (Q2) at ( 3.2,0.9);
		\coordinate (P)  at ( 0.0,-0.75);
		
		% --- charges + top baseline ---
		\node[circle,fill=xmblue,minimum size=16pt,inner sep=0pt] at (Q1) {\textcolor{white}{\Large $+$}};
		\node at ($(Q1)+(0,0.55)$) {$Q_1$};
		
		\node[circle,fill=red!70,minimum size=16pt,inner sep=0pt] at (Q2) {\textcolor{white}{\Large $-$}};
		\node at ($(Q2)+(0,0.55)$) {$Q_2$};
		
		\draw[dashed,thick] (Q1) -- (Q2);
		\draw[dashed,thick] (P) -- (Q1);
		\draw[dashed,thick] (P) -- (Q2);
		
		% --- angles from P to charges (for alignment) ---
		\pgfmathanglebetweenpoints{\pgfpointanchor{P}{center}}{\pgfpointanchor{Q1}{center}} \let\aPQone\pgfmathresult
		\pgfmathanglebetweenpoints{\pgfpointanchor{P}{center}}{\pgfpointanchor{Q2}{center}} \let\aPQtwo\pgfmathresult
		
		% --- choose lengths (visual) ---
		\def\Lone{2.25}  % |E1|
		\def\Ltwo{2.25}  % |E2|
		
		% directions of fields
		\pgfmathsetmacro{\angEone}{\aPQone+180} % away from +Q1
		\pgfmathsetmacro{\angEtwo}{\aPQtwo}     % toward -Q2
		
		% endpoints
		\coordinate (E1end) at ($(P)+(\angEone:\Lone)$);
		\coordinate (E2end) at ($(P)+(\angEtwo:\Ltwo)$);
		\coordinate (Rend)  at ($(P)+(\angEone:\Lone)+(\angEtwo:\Ltwo)$); % true sum
		
		% point of interest
		\node[circle,fill=white,draw=black,very thick,inner sep=1.3pt] at (P) {};
		
		% vectors
		\draw[vector,draw=xmblue!70,line width=2pt]
		(P) -- (E1end) node[midway,below left=-2pt,text=xmblue!70] {$\vec{E}_1$};
		\draw[vector,draw=xmred,line width=2pt]
		(P) -- (E2end) node[midway,above left=-1pt,text=xmred] {$\vec{E}_2$};
		\draw[vector,draw=black,line width=2pt]
		(P) -- (Rend) node[right,xmred] {$\vec{E}_1+\vec{E}_2$};
		
		% dashed parallelogram sides (from true endpoints)
		\draw[dashed,thick,xmblue!55] (E1end) -- (Rend);
		\draw[dashed,thick,xmblue!55] (E2end) -- (Rend);
		
		% --- angle alpha BETWEEN E1 and E2 ---
		\pic[
		draw,
		thick,
		angle radius=40,        % much larger radius so arc is visible
		angle eccentricity=1.3,
		pic text={$\,\alpha$},
		pic text options={yshift=5pt} % <-- lift the label
		] {angle = E1end--P--E2end};
		
		
	\end{tikzpicture}


			% block sides
			\draw (1.4,\yb) -- (1.4,\yt);
	
			
			% top path: R1 then R2 (labels above, values centered inside)
			\draw (1.4,\yt) -- (2.0,\yt)
			to[R,l^={$R_1$}] (4.,\yt)
			node[pos=2.5,fill=white,inner sep=1.4pt] {$10\,\Omega$}
			-- (4.8,\yt)
			to[R,l^={$R_2$}] (6.6,\yt)
			node[pos=2,fill=white,inner sep=1.6pt] {$20\,\Omega$}
			-- (7,\yt);
			
			% bottom path: R3
			\draw (1.4,\yb) -- (3.0,\yb)
			to[R,l^={$R_3$}] (4.8,\yb)
			node[pos=1.5,fill=white,inner sep=1.6pt] {$30\,\Omega$}
			-- (7,\yb);
			
			% join out of the block at y = 0 (to align with R4)
			\draw  (7,\yb) -- (7,0);
			
			% ===== series R4 on the lower-right branch and return =====
			\draw (7,0) -- (8.2,0)
			to[R,l^={$R_4$}] (9.5,0)
			node[pos=1.5,fill=white,inner sep=1.6pt] {$40\,\Omega$}
			-- (10.2,0) -- (10.2,2.6);
		\end{circuitikz}


		\fill (0,-\A) circle (\dotr);                     % start (bottom)
		\fill ({\lam/4},0) circle (\dotr);                % first zero crossing
		\fill ({\lam/2},\A) circle (\dotr);               % crest
		\fill ({3*\lam/4},0) circle (\dotr);              % join
		\foreach \j in {1,...,\nFlatDots}{
			\fill ({3*\lam/4 + \j*(\L-3*\lam/4)/(\nFlatDots+1)}, 0) circle (\dotr);
		}
		

8_1_3_spanning_homogeen

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		% ---- knobs ----
		\def\xL{0}
		\def\xR{7.2}
		\def\yTop{3.0}
		\def\yConn{-2.2}
		\def\yBot{-6.0}
		\def\xWLeft{-5.0}
		\def\xWRight{11.0}
		
		% Compute xTwo (dot 2 position < half gap)
		\pgfmathsetmacro{\xTwo}{\xL + 0.35*(\xR-\xL)}
		\def\yTwo{-2.2}
		
		% ---- outer circuit & battery ----
		\draw (\xWLeft,\yTop) -- (\xL+1.5,\yTop)
		to[battery1,l=$V$] (\xR-1.0,\yTop)
		-- (\xWRight,\yTop) -- (\xWRight,\yConn) -- (\xR,\yConn);
		\draw (\xWLeft,\yTop) -- (\xWLeft,\yConn) -- (\xL,\yConn);
		
		% ---- capacitor plates ----
		\draw[very thick] (\xL,0) -- (\xL,\yBot);
		\draw[very thick] (\xR,0) -- (\xR,\yBot);
		
		% ---- connection dots & labels ----
		\fill (\xL,\yConn) circle (2.2pt); \node[above left] at (\xL,\yConn) {$1$};
		\fill (\xR,\yConn) circle (2.2pt);
		
		% ---- dot 2 ----
		\fill (\xTwo,\yTwo) circle (2.2pt); 
		\node[above=2pt] at (\xTwo,\yTwo) {$2$};
		
		% ---- field lines (single arrow, leftwards) ----
		\tikzset{midarrow/.style={postaction={decorate,decoration={markings,
						mark=at position 0.52 with {\arrow{<}}}}}}
		\foreach \yy in {-1.0,-1.6,-2.2,-2.8,-3.4,-4.0,-4.6,-5.2,-5.8}
		\draw[xmgreen,thick,midarrow] (\xR,\yy) -- (\xL,\yy);
		
		% ---- E label ----
		\node[xmgreen] at ({\xL+0.72*(\xR-\xL)},-1.2) {$\vec{E}$};
		
		% ---- dashed accolade for d (requires decorations.pathreplacing) ----
		\draw[densely dashed,decorate,decoration={brace,amplitude=5pt}]
		(\xL,-0.7) -- (\xTwo,-0.7)
		node[midway,above=6pt] {$d$};
	\end{tikzpicture}

8_1_3_voorbeeld

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		% Preamble: \usetikzlibrary{decorations.pathreplacing,decorations.markings}
		
		% --- Parameters ---
		\def\R{1.6}      % cylinder radius
		\def\L{7.0}      % cylinder length
		\def\a{0.35}     % ellipse x-radius (perspective)
		\def\yTop{3.0}
		\def\yConn{0.0}
		\def\xL{0}
		\pgfmathsetmacro{\xR}{\xL+\L}
		\pgfmathsetmacro{\xTwo}{\xL + 0.35*(\xR-\xL)}
		\pgfmathsetmacro{\yBrace}{\R+0.15}
		
		
		
		% --- Cylinder body (full translucent fill) ---
		\fill[blue!15] (\xL,-\R) rectangle (\xR,\R);
		\fill[blue!15] (\xL,0) ellipse ({\a} and {\R});
		\fill[blue!15] (\xR,0) ellipse ({\a} and {\R});
		
		% Outlines: draw dashed full left ellipse, then overwrite left half solid
		\draw[blue,thick,dashed] (\xL,0) ellipse ({\a} and {\R});          % dashed (hidden) all around
		\draw[blue,thick]        (\xL,\R)  arc[start angle=90,end angle=270,
		x radius=\a, y radius=\R];   % left half solid (visible)
		\draw[blue,thick]        (\xR,0) ellipse ({\a} and {\R});          % right ellipse solid
		\draw[blue,thick]        (\xL,\R) -- (\xR,\R);
		\draw[blue,thick]        (\xL,-\R) -- (\xR,-\R);
		
		% --- Connection dots at ellipse centers ---
		\fill (\xL,\yConn) circle (2.2pt) node[above] {$1$};
		\fill (\xR,\yConn) circle (2.2pt);
		
		% --- Dot 2 (same height as 1) ---
		\fill (\xTwo,\yConn) circle (2.2pt);
		\node[above=2pt] at (\xTwo,\yConn) {$2$};
		
		% --- Field lines (leftward, one middle arrow) ---
		\tikzset{midarrow/.style={postaction={decorate,decoration={markings,
						mark=at position 0.52 with {\arrow{<}}}}}}
		\foreach \yy in {-1.0,-0.4,0.2,0.8,1.4}
		\draw[xmgreen,thick,midarrow] (\xR-\a,\yy) -- (\xL+\a,\yy);
		
		% --- E label ---
		\node[xmgreen] at (\xL+0.62*\L,0.7) {$\vec{E}$};
		
		% --- Brace for d (above the cylinder) ---
		\draw[densely dashed,decorate,decoration={brace,amplitude=5pt}]
		(\xL+\a,\yBrace) -- (\xTwo,\yBrace)
		node[midway,above=6pt] {$d$};
		
		% --- Circuit with battery; wires go to ellipse centers (dots) ---
		\draw (-2,\yTop) -- (2,\yTop) to[battery1,l=$V$] (\xR-2,\yTop) -- (\xR+2,\yTop);
		\draw (-2,\yTop) -- (-2,\yConn) -- (\xL,\yConn);      % to left center
		\draw (\xR+2,\yTop) -- (\xR+2,\yConn) -- (\xR,\yConn); % to right center
		
		% --- Velocity U ---
		\draw[xmred,ultra thick,->] (\xR-0.8,-2.2) -- (\xL+0.8,-2.2)
		node[midway,below] {$U$};
	\end{tikzpicture}


8_1_5_betekenis_spanning

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		% Needs: \usetikzlibrary{decorations.pathreplacing,decorations.markings}
		
		% --- Parameters ---
		\def\R{1.6}      % cylinder radius
		\def\L{7.0}      % cylinder length
		\def\a{0.35}     % ellipse x-radius (perspective)
		\def\yTop{3.0}
		\def\yConn{0.0}
		\def\xL{0}
		\pgfmathsetmacro{\xR}{\xL+\L}
		\pgfmathsetmacro{\yBrace}{\R+0.15}
		
		% --- Cylinder body (translucent) ---
		\fill[blue!15] (\xL,-\R) rectangle (\xR,\R);
		\fill[blue!15] (\xL,0) ellipse ({\a} and {\R});
		\fill[blue!15] (\xR,0) ellipse ({\a} and {\R});
		
		% Outlines
		\draw[blue,thick,dashed] (\xL,0) ellipse ({\a} and {\R});
		\draw[blue,thick]        (\xL,\R) arc[start angle=90,end angle=270,
		x radius=\a, y radius=\R];
		\draw[blue,thick]        (\xR,0) ellipse ({\a} and {\R});
		\draw[blue,thick]        (\xL,\R) -- (\xR,\R);
		\draw[blue,thick]        (\xL,-\R) -- (\xR,-\R);
		
		% --- Connection dots at ellipse centers ---
		\fill (\xL,\yConn) circle (2.2pt) node[above left] {$1$};
		\fill (\xR,\yConn) circle (2.2pt) node[above right] {$2$};
		
		% --- Field lines ---
		\tikzset{midarrow/.style={postaction={decorate,decoration={markings,
						mark=at position 0.52 with {\arrow{<}}}}}}
		\foreach \yy in {-1.0,-0.4,0.2,0.8,1.4}
		\draw[xmgreen,thick,midarrow] (\xR-\a,\yy) -- (\xL+\a,\yy);
		
		% --- E label ---
		\node[xmgreen] at (\xL+0.62*\L,0.6) {$\vec{E}$};
		
		% --- Circuit with battery ---
		\draw (-2,\yTop) -- (2,\yTop) to[battery1,l=$V$] (\xR-2,\yTop) -- (\xR+2,\yTop);
		\draw (-2,\yTop) -- (-2,\yConn) -- (\xL,\yConn);
		\draw (\xR+2,\yTop) -- (\xR+2,\yConn) -- (\xR,\yConn);
		
		% --- Electron ---
		\coordinate (elektron) at (\xL+5.8,\yConn);
		\draw[thick,fill=white] (elektron) circle (6pt);
		\node[below left=1pt] at (elektron) {\small\textit{elektron}};
		% Motion arrow
		\draw[->,very thick] (elektron) -- ++(-1.2,0);
		
		% --- Velocity U (red) ---
		\draw[xmred,ultra thick,->] (\xR-0.8,-2.2) -- (\xL+0.8,-2.2)
		node[midway,below] {$U$};
	\end{tikzpicture}


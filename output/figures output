13_1_b_loodlijn

	\begin{figure}[H]
		\centering
		\begin{tikzpicture}[line cap=round,line join=round,>=latex,scale=1.0]
			
			% ------- knobs (easy to tweak) -------
			\def\H{4.6}    % height of B arrows
			\def\s{1.05}   % spacing of B arrows
			\def\n{5}      % number of arrows
			\def\LenN{0.95}% half-length of the normal segment
			\def\alphar{0.55} % radius of the angle arc
			
			% ------- uniform B field (green up arrows) -------
			\foreach \k in {0,...,\numexpr\n-1\relax} {
				\draw[xmgreen,thick,->] (\k*\s,0) -- (\k*\s,\H);
			}
			\node[left] at (0,\H) {$\vec{B}$};
			
			% ------- inclined surface A (blue line) -------
			% Use two explicit points for a stable slope:
			\coordinate (A1) at (-0.2,0.6);
			\coordinate (A2) at (4.8,3.2);
			\draw[xmblue,thick] (A1) -- (A2) node[right,black] {$A$};
			
			% Intersection point P (pick a nice point on A)
			\coordinate (P) at ($(A1)!0.67!(A2)$);
			
			% ------- normal to A at P (short blue segment) -------
			% Direction vector roughly perpendicular to A: (-0.5,1) (slope -2)
			\coordinate (Nu) at ($ (P) + \LenN*(-0.5,1) $);
			\coordinate (Nd) at ($ (P) - \LenN*(-0.5,1) $);
			\draw[xmblue,thick] (Nd) -- (Nu);
			
			% ------- angle alpha between normal and B (small angle) -------
			% B is vertical (90°). The normal points at angle ~116.565°.
			\draw[thick] (P) ++(90:\alphar) arc[start angle=90, end angle=116.565, radius=\alphar];
			\node at ($(P)+(103:0.85)$) {$\alpha$};
			
		\end{tikzpicture}
	\end{figure}


5_6_Emech
	
	\begin{tikzpicture}
		\begin{axis}[
			xmin=0, xmax=6.28,         % ~2π
			ymin=0, ymax=1.05,
			axis x line=bottom,
			axis y line=left,
			axis line style={-stealth,black,thick}, % arrowed axes
			xtick=\empty, ytick=\empty,
			domain=0:6.28, samples=200,
			clip=false,
			xlabel={$t$}, ylabel={$E$}
			]
			
			% Potential energy: cos^2
			\addplot[xmblue, ultra thick] {cos(deg(x))^2};
			\node[xmblue, anchor=west] at (axis cs:6,0.82) {$E_{pot}$};
			
			% Kinetic energy: sin^2  (solid, not dotted)
			\addplot[xmgreen, ultra thick] {sin(deg(x))^2};
			\node[xmgreen, anchor=west] at (axis cs:6,0.12) {$E_{kin}$};
			
			% Total mechanical energy: constant (solid red)
			\addplot[xmred, ultra thick] {1};
			\node[xmred, above] at (axis cs:3.14,1) {$E_{mech}$};
			
		\end{axis}
	\end{tikzpicture}

5_7_sinus

	\begin{tikzpicture}[line cap=round, line join=round, scale=1.0]
		
		% --- Axes (arrowed), labels ---
		\draw[axis] (0,-2.0) -- (0,2.2) node[above] {$x$};
		\draw[axis] (0,0) -- (12.6,0) node[right] {$t$};
		
		% --- Sine wave parameters ---
		\pgfmathsetmacro{\A}{1.55}     % amplitude
		\pgfmathsetmacro{\P}{3.2}      % period length along x
		\pgfmathsetmacro{\k}{2*pi/\P}  % angular wavenumber
		
		% --- Sine curve (slight dark edge + main green stroke) ---
		\draw[xmgreen, line width=3.2pt, samples=350, domain=0:12.4, variable=\x]
		plot ({\x},{\A*sin(deg(\k*\x - pi/2))});   % starts near a minimum
		\draw[xmgreen, line width=2.2pt, samples=350, domain=0:12.4, variable=\x]
		plot ({\x},{\A*sin(deg(\k*\x - pi/2))});
		
	\end{tikzpicture}


5_8_gedempt
	
	\begin{tikzpicture}[line cap=round, line join=round, scale=1.0]
		
		% ---- Axes ----
		\draw[axis] (0,-2.2) -- (0,2.4) node[above] {$x$};
		\draw[axis] (0,0) -- (12.6,0) node[right] {$t$};
		
		% ---- Parameters ----
		\pgfmathsetmacro{\A}{1.8}      % initial amplitude
		\pgfmathsetmacro{\P}{3.6}      % period along t-axis
		\pgfmathsetmacro{\k}{2*pi/\P}  % angular wavenumber
		\pgfmathsetmacro{\d}{0.10}     % decay rate in exp(-d*t)
		
		% ---- Damped sinusoid (dark edge + main stroke) ----
		\draw[xmgreen, line width=3.2pt, samples=350, domain=0:12.4, variable=\t]
		plot ({\t},{\A*exp(-\d*\t)*sin(deg(\k*\t - pi/2))});
		\draw[xmgreen, line width=2.2pt, samples=350, domain=0:12.4, variable=\t]
		plot ({\t},{\A*exp(-\d*\t)*sin(deg(\k*\t - pi/2))});
		
		% ---- Exponential envelopes ----
		\draw[dashed, black!70, thick, samples=220, domain=0:12.4, variable=\t]
		plot ({\t},{\A*exp(-\d*\t)});
		\draw[dashed, black!70, thick, samples=220, domain=0:12.4, variable=\t]
		plot ({\t},{-\A*exp(-\d*\t)});
		
		% ---- Envelope label ----
		\node[black] at (4.6,1.45) {$A_0\cdot e^{-\lambda t/(2m)}$};
		
	\end{tikzpicture}
	
5_9_gedreven

	\begin{tikzpicture}
		\begin{axis}[
			xmin=0, xmax=12.5,
			ymin=0, ymax=4.6,
			axis x line=bottom,
			axis y line=left,
			axis line style={-stealth,black,thick},
			xtick=\empty, ytick=\empty,
			width=12.5cm, height=6.0cm,
			samples=450, domain=0.15:12.3, clip=false,
			xlabel={$f_u$},
			ylabel={$A$},
			% put labels at the ends of the axes
			xlabel style={at={(axis cs:12.5,0)},anchor=west},
			]
			
			% -------- parameters --------
			\pgfmathsetmacro{\fe}{5.1}     % natural frequency
			\pgfmathsetmacro{\zeta}{0.32}  % damping ratio (tune width/height)
			\pgfmathsetmacro{\Azero}{3.1}  % overall scale
			
			% amplitude function
			\addplot+[no marks, line width=2.6pt, color=xmgreen]
			({x},{\Azero / sqrt((1 - (x/\fe)^2)^2 + (2*\zeta*x/\fe)^2)});

			
			% -------- peak location (analytical) --------
			% f_peak = f_e * sqrt(1 - 2*zeta^2)  (valid for zeta < 1/sqrt(2))
			\pgfmathsetmacro{\fpeak}{\fe*sqrt(max(0,1 - 2*\zeta*\zeta))}
			\pgfmathsetmacro{\Apeak}{\Azero / sqrt((1 - (\fpeak/\fe)^2)^2 + (2*\zeta*\fpeak/\fe)^2)}
			
			% dashed line through the peak
			\draw[dashed,black!70,thick]
			(axis cs:\fpeak,0) -- (axis cs:\fpeak,\Apeak);
			\node[below] at (axis cs:\fpeak,0) {$f_{\text{eigen}}$};
			
		\end{axis}
	\end{tikzpicture}


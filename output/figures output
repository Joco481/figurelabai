3_1_nettokracht

	%3.1
	\begin{tikzpicture}[scale=1]
		
		% ===== LEFT FIGURE =====
		\begin{scope}[shift={(0,0)}]
			% axes
			\draw[axis] (-1,0) -- (4.2,0) node[right] {$x$};
			\draw[axis] (0,-0.6) -- (0,2.6) node[above] {$y$};
			
			% block sitting on the x-axis
			\def\xL{0.8}\def\xR{2.6}\def\yB{0}\def\yT{1.6}
			\filldraw[fill=xmyellow,draw=brown!80!black,thick]
			(\xL,\yB) rectangle (\xR,\yT);
			
			% block center
			\pgfmathsetmacro\xC{(\xL+\xR)/2}
			\pgfmathsetmacro\yC{(\yB+\yT)/2}
			\fill (\xC,\yC) circle (3pt);
			
			% vertical forces through the center
			\draw[-latex,xmblue,ultra thick] (\xC,\yC) -- ++(0,1.4)
			node[above,xmblue] {$\vec{F}_N$};
			\draw[-latex,xmred,ultra thick]  (\xC,\yC) -- ++(0,-1.4)
			node[below,xmred] {$\vec{F}_z$};
			
			% horizontal forces from the right face (F2 longer, F1 shorter)
			\draw[-latex,xmgreen,ultra thick] (\xR,\yC+0.2) -- ++(1.4,0)
			node[right,xmgreen] {$\vec{F}_2$};
			\draw[-latex,xmgreen!60!white,ultra thick] (\xR,\yC-0.2) -- ++(1.0,0)
			node[right,xmgreen!60!white] {$\vec{F}_1$};
		\end{scope}
		
		% ===== RIGHT FIGURE =====
		\begin{scope}[shift={(7.2,0)}]
			% axes
			\draw[axis] (-1,0) -- (4.2,0) node[right] {$x$};
			\draw[axis] (0,-0.6) -- (0,2.6) node[above] {$y$};
			
			% block
			\def\xL{0.8}\def\xR{2.6}\def\yB{0}\def\yT{1.6}
			\filldraw[fill=xmyellow,draw=brown!80!black,thick]
			(\xL,\yB) rectangle (\xR,\yT);
			\pgfmathsetmacro\xC{(\xL+\xR)/2}
			\pgfmathsetmacro\yC{(\yB+\yT)/2}
			\fill (\xC,\yC) circle (3pt);
			
			% resultant force (black)
			\draw[-latex,black,ultra thick] (\xC,\yC) -- ++(2.0,0)
			node[above] {$\vec{F}_{\mathrm{res}}$};
		\end{scope}
	\end{tikzpicture}

3_3_krachtendiagram_boek
	
	\begin{tikzpicture}[line cap=round,scale=1.05]
		
		%%%% === LEFT: book with forces ===
		% geometry
		\def\h{0.5}          % half thickness of the book
		\def\xL{-2.6}        % left end (center of left semicircle)
		\def\xR{2.9}         % rightmost x for the small stubs
		\def\cx{2.9}         % notch center x
		\def\r{\h}           % notch radius = half thickness
		
		% fill the bar (rounded left end)
		\fill[xmyellow]
		(\xL,\h) arc[start angle=90,end angle=270,radius=\h] -- (\xR,-\h) -- (\xR,\h) -- cycle;
		% cut the notch
		\fill[white] (\cx,0) circle (\r);
		
		% outline: darker border + notch + right stubs
		\draw[xmaccent!50!black, line width=1.4pt]
		(\xL,\h) arc(90:270:\h) -- (\cx,-\h);
		\draw[xmaccent!50!black, line width=1.4pt]
		(\xL,-\h) -- (\cx,-\h);
		\draw[xmaccent!50!black, line width=1.4pt]
		(\xL,\h) -- (\cx,\h);
		\draw[xmaccent!50!black, line width=1.4pt]
		(\cx,\h) arc(-90:90:-\r);                    % inner notch rim
		
		
		
		
		% forces
		\draw[-latex, ultra thick, xmblue!70] (0,0) -- (0,2.2)
		node[midway,right=4pt, text=xmblue!70] {$\vec{F}$};
		\draw[-latex, ultra thick, xmred] (0,0) -- (0,-2.2)
		node[midway,right=4pt, text=xmred] {$\vec{F}_z$};
		
		% pivot point
		\fill (0,0) circle (2.2pt);
		
		%%%% === RIGHT: axes with forces ===
		\begin{scope}[xshift=6.3cm]
			\draw[axis] (-2.2,0) -- (2.2,0) node[right] {$x$};
			\draw[axis] (0,-2.3) -- (0,2.6) node[above] {$y$};
			\draw[-latex, ultra thick, xmblue!70] (0,0) -- (0,2.2)
			node[midway,right=4pt, text=xmblue!70] {$\vec{F}$};
			\draw[-latex, ultra thick, xmred] (0,0) -- (0,-2.2)
			node[midway,right=4pt, text=xmred] {$\vec{F}_z$};
			\fill (0,0) circle (2.2pt);
		\end{scope}
		
	\end{tikzpicture}


3_4_krachtendiagram_kar

	\begin{tikzpicture}[scale=1.2]
		% --- points and params ---
		\coordinate (O) at (0,0);
		\def\L{3.2}                  % length of green forces
		\coordinate (F2) at ({\L*cos(135)},{\L*sin(135)});   % up-left (45° above -x)
		\coordinate (F1) at ({\L*cos(214)},{\L*sin(214)});   % down-left (34° below -x)
		\coordinate (R)  at (-3.7,0);                         % end of resultant
		
		% --- axes ---
		\draw[axis] (0,-2) -- (0,3) node[above] {$y$};
		\draw[axis,<-] (-4.2,0) -- (0.5,0); \node[below] at (-4,0) {$x$};
		\fill (O) circle (2.2pt);  % origin dot
		
		% --- forces ---
		\draw[-latex, very thick, xmgreen!70!black] (O) -- (F2)
		node[above right] {$\vec{F}_2$};
		\draw[-latex, very thick, xmgreen!50!black] (O) -- (F1)
		node[below right] {$\vec{F}_1$};
		\draw[-latex, ultra thick, xmred] (O) -- (R)
		node[pos=1.1, above=4pt, xmred] {$\vec{F}_{\mathrm{res}}$};
		
		% --- dashed helper triangle ---
		\draw[dashed, xmblue!70, thick] (F2) -- (R) -- (F1);
		
		% --- angle arcs on the right (0→45°, 0→-34°) ---
		\def\rad{0.9}
		\draw[thick] (O) ++(0:-\rad+0.2) arc[start angle=180, end angle=135, radius=\rad-0.2];
		\draw[thick] (O) ++(0:-\rad) arc[start angle=180, end angle=214, radius=\rad];
		\node at ($(O)-(20:1.2)$) {$34^\circ$};
		\node at ($(O)-(-20:1.2)$) {$45^\circ$};
	\end{tikzpicture}

3_5_krachtendiagram_gekoppeld

	\begin{tikzpicture}
		% ---- axis ----
		\draw[axis] (-0.8,0) -- (11.7,0) node[right] {$x$};
		
		% ---- blocks ----
		% left block m2
		\draw[draw=xmaccent!50!black, line width=1.2pt, fill=xmyellow] (0.8,0) rectangle (3.2,2.0);
		\node at (2.0,1.0) {\textit{$m_2$}};
		% right block m1  (→ moved right to increase gap)
		\draw[draw=xmaccent!50!black, line width=1.2pt, fill=xmyellow] (7.2,0) rectangle (9.6,2.0);
		\node at (8.4,1.0) {\textit{$m_1$}};
		
		% ---- tensions (equal length) and rope ----
		\tikzset{
			Tleft/.style={-latex, very thick, draw=xmgreen!60!black},
			Tright/.style={-latex, very thick, draw=xmgreen!80!black}
		}
		\def\L{1.4} % arrow length (same for T and T')
		% left arrow: \vec T
		\draw[Tleft]  (3.2,1.0) -- ++(\L,0)
		node[pos=.55, above=6pt, text=xmgreen!60!black] {$\vec{T}$};
		% right arrow: \vec T'
		\draw[Tright] (7.2,1.0) -- ++(-\L,0)
		node[pos=.55, above=6pt, text=xmgreen!80!black] {$\vec{T}^\prime$};
		% blue rope between arrow tips (longer now)
		\draw[line width=0.9pt, xmblue!60, line cap=round]
		(3.2+\L,1.0) -- (7.2-\L,1.0);
		
		% ---- external force on m1 ----
		\draw[-latex, very thick, xmred] (9.6,1.0) -- (11.5,1.0)
		node[pos=.55, above=6pt, xmred] {$\vec{F}$};
	\end{tikzpicture}


3_6_1_gravitatie

	\begin{tikzpicture}
		% --- geometry ---
		\def\r{0.8} % radius
		\coordinate (M1) at (-2,0);
		\coordinate (M2) at ( 2,0);
	
		% --- masses: flat fill + thick dark rim ---
		\draw[draw=xmgreen!40!black, line width=1.2mm, fill=xmgreen!70!black] (M1) circle (\r);
		\draw[draw=xmgreen!40!black, line width=1.2mm, fill=xmgreen!30]        (M2) circle (\r);
	
		% --- captions ---
		\node[below=25pt] at (M1) {\textit{Massa 1}};
		\node[below=25pt] at (M2) {\textit{Massa 2}};
	
		% --- force arrows (separate), green like in PNG ---
		\tikzset{force/.style={-latex, very thick, xmgreen!75!black}}
		\draw[force] ($(M1)+(\r,0)$) -- ($(M1)+(\r+1.0,0)$)
		node[pos=.55, above=4pt, text=xmgreen!65!black] {$\vec{F}_{21}$};
		\draw[force] ($(M2)+(-\r,0)$) -- ($(M2)+(-\r-1.0,0)$)
		node[pos=.55, above=4pt, text=xmgreen!65!black] {$\vec{F}_{12}$};
	\end{tikzpicture}

3_6_normaalkracht

	\begin{tikzpicture}[line cap=round, line join=round, scale=1.0]
		
		% ================= LEFT: block on horizontal table =================

		
		% Table: rounded bar
		\draw[fill=xmblue!60, draw=xmblue!70!black, line width=1.4pt, rounded corners=6pt]
		(-0.2,-0.90) rectangle (4.8,0);
		
		% Block (centered on x-axis)
		\draw[fill=xmyellow, draw=xmaccent!60!black, line width=1.4pt, rounded corners=2pt]
		(1.8,0) rectangle (3.2,1.4);
		
		% Contact point and forces (x-axis passes through the dot)
		\coordinate (C) at (2.5,0.7);
		\draw[-latex, ultra thick, xmblue!70] (C) -- ++(0,2.2)
		node[midway, right=4pt, text=xmblue!70] {$\vec F_N$};
		\draw[-latex, ultra thick, xmred] (C) -- ++(0,-2.4)
		node[midway, right=4pt, text=xmred] {$\vec F_z$};
		\fill (C) circle (2.4pt);
		
		% Global axes
		\draw[axis] (0.2,-1.2) -- (0.2,3.3) node[above] {$y$};
		\draw[axis] (-0.8,0.7) -- (5.5,0.7) node[right] {$x$};
		
		% ================= RIGHT: block on an inclined plane =================
		\begin{scope}[xshift=8.6cm, yshift=-1.5cm]
			\def\ang{-28}  % slope angle (degrees)
			
			% Ramp wedge
			\fill[xmblue!60] (0,1) -- ++(0,2.2) -- ++(6,{-6*tan(-\ang)}) -- ++(-6,0) -- cycle;
			\draw[xmblue!70!black, line width=1.4pt]
			(0,1) -- ++(0,2.2) -- ++(6,{-6*tan(-\ang)}) -- ++(-6,0) -- cycle;
			
			% Contact point on the ramp top
			\coordinate (O) at (2.6, {1.3 - 2.6*tan(\ang)});
						
			% Rotated block
			\begin{scope}[rotate around={\ang:(O)}]
				\draw[fill=xmyellow, draw=xmaccent!60!black, line width=1.4pt, rounded corners=2pt]
				($(O)+(-0.75,-0.75)$) rectangle ($(O)+(0.75,0.75)$);
			\end{scope}
			
			
			
			% Dashed decomposition of Fz
			\draw[dashed, black!70, thick] (O) ++(0,-2.6) -- ++({\ang}:-1.225) coordinate (Oy);
			\draw[dashed, black!70, thick] (O) ++(0,-2.6) -- ++({90+\ang}:{2.6*cos(-\ang)}) coordinate (Ox);
			
			% Local axes through O (x along plane, y normal)
			\draw[axis, rotate around={\ang:(O)}] ($(O)+(-3.2,0)$) -- ($(O)+(4.2,0)$) node[right] {$x$};
			\draw[axis, rotate around={\ang:(O)}] ($(O)+(0,-3.5)$) -- ($(O)+(0,3.0)$) node[above] {$y$};
			
			
			% Forces
			\draw[-latex, very thick, xmblue!70] (O) -- ++({\ang+90}:2.4)
			node[midway, right=2pt, text=xmblue!70] {$\vec F_N$};
			\draw[-latex, ultra thick, xmred] (O) -- ++(-90:2.6)
			node[midway, right=2pt, text=xmred] {$\vec F_z$};
			\draw[-latex, very thick, xmgreen!75!black] (O) -- (Ox);
			\draw[-latex, very thick, xmgreen!60!white] (O) -- (Oy);
			
			\fill (O) circle (2.4pt);
			
			% Angle markers θ
			\draw[thick] (4.4,0) ++(0:0.8) arc[start angle=-180, end angle= -180+\ang, radius=0.8];
			\node at ($(4.4,0)+(0.55,0.28)$) {$\theta$};
			\draw[thick] (O) ++(-90:0.95) arc[start angle=-90, end angle={-90+\ang}, radius=0.9];
			\node at ($(O)+({-90+0.55*\ang}:1.15)$) {$\theta$};
		\end{scope}
		
	\end{tikzpicture}

3_7_trek

	\begin{tikzpicture}[line cap=round, line join=round, scale=1.0]
		
		
		
		% Table: base + lighter inset for the top highlight
		\draw[fill=xmblue!60, draw=xmblue!70!black, line width=1.4pt, rounded corners=8pt]
		(-1,-0.95) rectangle (6.3,0.2);

		
		% Block
		\coordinate (C) at (3,1.0);     % center of block
		\def\bs{1.6}                     % block size
		\coordinate (BL) at ($(C)+(-\bs/2,-\bs/2)$);
		\coordinate (TR) at ($(C)+(\bs/2,\bs/2)$);
		
		\draw[fill=xmyellow, draw=xmaccent!60!black, line width=1.4pt, rounded corners=2pt]
		(BL) rectangle ($(BL)+(\bs,\bs)$);
		
		% Axes
		\draw[axis] (-0.4,1) -- (6.4,1) node[right] {$x$};
		\draw[axis] (0,-2.2) -- (0,4.0) node[above] {$y$};
		
		
		
		% Forces
		% Normal (shorter)
		\draw[vector, xmblue!80]
		(C) -- ++(0,1.4) node[pos=0.75, left] {$\vec{F}_N$};
		
		% Weight (longer)
		\draw[vector, xmred]
		(C) -- ++(0,-2.4) node[below right] {$\vec{F}_z$};
		
		% Pulling force from top-right edge of the block
		\draw[vector, xmgreen]
		($(TR)+(-0.05,0)$) -- ++(1.2,1.0)
		node[near end, right] {$\vec{F}_{\text{trek}}$};
		
		% Contact point (center)
		\fill (C) circle (2pt);
		
	\end{tikzpicture}
	

4_1_arbeid

	\begin{tikzpicture}[x=1cm,y=1cm]
		% --- parameters
		\def\blockw{1.8}
		\def\blockh{1.2}
		\def\phiang{32}    % angle of F (deg)
		\def\x0{2.0}       % left face of initial block (keeps block at x>0)
		\def\d{6.0}        % displacement of the block
		
		% key points (right faces = contact points)
		\coordinate (P0) at (\x0+\blockw,0);         % initial right face
		\coordinate (P1L) at (\x0+\d, -\blockh/2);   % final block left-bottom
		\coordinate (P1R) at (\x0+\d+\blockw, \blockh/2); % final block right-top
		\coordinate (P1)  at (\x0+\d+\blockw,0);     % final right face (arrow end)
		
		% --- floor/platform
		\draw[rounded corners=2pt, line width=1.2pt, xmblue, fill=xmdarkblue!80]
		(-1.2,-1.1) rectangle (13.0,-0.6);
		
		% --- initial block (solid)
		\draw[thick, xmred!60!black, fill=xmyellow]
		(\x0, -\blockh/2) rectangle ++(\blockw, \blockh);
		
		% --- final block (dashed outline + light fill)
		\draw[very thick, xmred!60!black, dashed, dash pattern=on 6pt off 4pt, fill=xmyellow!50]
		(P1L) rectangle (P1R);
		
		
		
		% --- contact points (black dots)
		\fill (P0) circle (2pt);
		\fill (P1) circle (2pt);
		
		% --- applied force F at angle phi, from P0
		\draw[vector] (P0) -- ++(\phiang:2.6) node[above right=-2pt] {$\vec F$};
		
		% --- angle marker φ at P0
		\draw[thick] ($(P0)+(0.85,0)$) arc[start angle=0, end angle=\phiang, radius=0.85];
		\node at ($(P0)+(0.95,0.35)$) {$\phi$};
		
		% --- axes 
		\draw[axis] (-1.2,0) -- (13.0,0) node[below right] {$x$};
		\draw[axis] ( -0.4,-1.2) -- (-0.4,3.0) node[above left] {$y$};
		
		% --- displacement vector Δr (right-face → right-face)
		\draw[vector, xmgreen, ultra thick, shorten >=2pt, shorten <=2pt]
		(P0) -- (P1);
		\node[xmgreen] at ($(P0)!0.55!(P1)+(0,0.35)$) {$\Delta \vec r$};
		
	\end{tikzpicture}

4_2_arbeid_integraal
	
	\begin{tikzpicture}[x=1cm,y=1cm]
		% --- key points
		\coordinate (O) at (0,0);          % origin
		\coordinate (A) at (-2.2,1.6);     % start of curve
		\coordinate (M) at (0.4,1.2);      % point on curve (for r and dr)
		\coordinate (B) at (3.2,0.9);      % end of curve
		
		% Choose a tangent direction at M (controls symmetric around M)
		\coordinate (Cminus) at ($(M)+(-0.70,-0.35)$);
		\coordinate (Cplus)  at ($(M)+( 0.70, 0.35)$);
		
		% Other controls (kept high to avoid clutter)
		\coordinate (C0) at (-1.7,2.5);
		\coordinate (C3) at (2.4,1.5);
		
		% --- axes
		\draw[axis] (-2.6,0) -- (4.2,0) node[below right] {$x$};
		\draw[axis] (0,-0.3) -- (0,3.0) node[left] {$y$};
		
		% --- smooth curve with continuous tangent at M
		\draw[xmgreen, very thick]
		(A) .. controls (C0) and (Cminus) .. (M)
		.. controls (Cplus) and (C3) .. (B);
		
		% --- position vectors (all same color)
		\draw[vector, xmblue] (O) -- (A) node[midway, below left=1pt] {$\vec r_1$};
		\draw[vector, xmblue] (O) -- (B) node[midway, below right=1pt] {$\vec r_2$};
		\draw[vector, xmblue] (O) -- (M) node[midway, left=2pt] {$\vec r$};
		
		% --- tangent displacement d r at M (short and exactly along the tangent)
		\draw[vector, xmblue, shorten >=1pt, shorten <=1pt]
		(M) -- ($(M)!0.80!(Cplus)$) node[above right=-2pt] {$d\vec r$};
		
		% --- force vector at M (red, vertical)
		\draw[vector] (M) -- ++(0.1,1.2) node[above] {$\vec F$};
		
		% --- points on the curve
		\fill (A) circle (2.2pt);
		\fill (M) circle (2.2pt);
		\fill (B) circle (2.2pt);
	\end{tikzpicture}


4_3_arbeid_grafisch

	\begin{tikzpicture}[x=1cm,y=1cm]
		
		% ===== LEFT FIGURE =====
		\begin{scope}
			% axes
			\draw[axis] (0,0) -- (4.4,0) node[below right] {$x$};
			\draw[axis] (0,0) -- (0,3.0) node[left] {$F_x$};
			
			% key points
			\coordinate (x1) at (1,0);
			\coordinate (x2) at (3,0);
			\coordinate (Fx) at (0,2); % y = Fx
			
			% rectangle area (fill first)
			\fill[xmgreen!30]
			(x1) -- (x1|-Fx) -- (x2|-Fx) -- (x2) -- cycle;
			
			% thicker green top edge
			\draw[xmgreen, line width=2.0pt] (x1|-Fx) -- (x2|-Fx);
			
			% dashed construction lines
			\draw[dashed] (x1) -- (x1|-Fx);
			\draw[dashed] (x2) -- (x2|-Fx);
			
			% dotted from y-axis Fx to rectangle (to the top-left corner)
			\draw[densely dotted] (Fx) -- (x1|-Fx);
			\node[left] at (Fx) {$F_x$};
			
			% brace for Δx (needs decorations.pathreplacing)
			\draw[decorate,decoration={brace,amplitude=6pt,mirror}]
			($(x1)+(0,-0.22)$) -- ($(x2)+(0,-0.22)$)
			node[midway,below=7pt] {$\Delta x$};
			
			% labels & points
			\node at ($(x1)!0.5!(x2)+(0,1)$) {$W$};
			\node[below] at (x1) {$x_1$};
			\node[below] at (x2) {$x_2$};
			\fill (x1) circle (2pt);
			\fill (x2) circle (2pt);
		\end{scope}
		
		
		% ===== RIGHT FIGURE =====
		\begin{scope}[xshift=7.4cm]
			% axes (a tad wider/taller)
			\draw[axis] (0,0) -- (4.8,0) node[below right] {$x$};
			\draw[axis] (0,0) -- (0,3.2) node[left] {$F_x$};
			
			% points
			\coordinate (xa) at (0.8,0.30); % x1 above axis
			\coordinate (xb) at (4.0,0);    % x2 on axis
			
			% ---- build filled curve (larger so labels fit inside)
			\fill[xmgreen!30]
			(xa) .. controls (1.4,2.5) and (2.1,2.3) .. (2.5,1.4)
			.. controls (2.9,0.2) and (3.4,-2.0) .. (xb)
			-- (xb) -- (xa|-0,0) -- cycle; % close to axis under start point
			
			% draw curve on top
			\draw[xmgreen, very thick]
			(xa) .. controls (1.4,2.5) and (2.1,2.3) .. (2.5,1.4)
			.. controls (2.9,0.2) and (3.4,-2.0) .. (xb);
			
			% dotted vertical from x1 down to x-axis (to show x-coordinate)
			\draw[densely dotted] (xa) -- (xa |- 0,0);
			
			% labels (inside lobes)
			\node at (1.9,1.55) {$W>0$};
			\node at (3.1,-0.95) {$W<0$};
			
			% x-labels and points
			\node[below] at (xa |- 0,0) {$x_1$};
			\node[below] at (xb) {$x_2$};
			\fill (xa) circle (2pt);
			\fill (xb) circle (2pt);
		\end{scope}
		
	\end{tikzpicture}


4_4_veer

	\begin{tikzpicture}[scale=1]
		\def\ySpring{0.8}
		\def\xWall{0}
		\def\xZero{7.0}
		\def\xMass{12.4}
		\def\rMass{0.22}
		\def\A{0.35}    % amplitude
		\def\N{14}      % number of coils
		
		% wall
		\fill[brown!80!black] (\xWall-0.6,-0.2) rectangle (\xWall+0.15,1.95);
		
		% axis
		\draw[axis] (\xWall+0.15,0) -- (\xMass+2.2,0) node[below right] {$x$};
		
		% dashed verticals
		\draw[densely dashed,thick] (\xZero,-0.1) -- (\xZero,1.35);
		\draw[densely dashed,thick] (\xMass,-0.1) -- (\xMass,1.35);
		
		% dots + label
		\fill (\xZero,0) circle (2.2pt) node[below=3pt] {$0$};
		\fill (\xMass,0) circle (2.2pt);
		
		% ---- spring: clean sine from wall edge to mass edge ----
		\pgfmathsetmacro\xStart{\xWall+0.15}   % just right of wall
		\pgfmathsetmacro\xEnd{\xMass-\rMass}        % to edge of mass
		\pgfmathsetmacro\kdeg{360*\N/(\xEnd-\xStart)} % frequency in DEGREES
		
		\draw[xmblue,very thick,domain=\xStart:\xEnd,samples=600,variable=\x]
		plot ({\x},{\ySpring + \A*sin(\kdeg*(\x-\xStart))});
		
		% mass
		\fill[xmblue!70!black] (\xMass,\ySpring) circle (\rMass);
		\draw[xmblue!70!black] (\xMass,\ySpring) circle (\rMass);
		
		% forces
		\draw[vector] (\xMass,\ySpring) -- ++(-3.,0)
		node[above, xmred, yshift=2pt, xshift=-1pt] {$\vec{F}_s$};
		\draw[-latex, xmgreen, ultra thick] (\xMass,\ySpring) -- ++(3.,0)
		node[above, xmgreen, yshift=2pt, xshift=2pt] {$\vec{F}_{\text{MUSCLE}}$};
		
		% brace and Δℓ
		\draw[densely dashed,thick,decorate,decoration={brace,mirror,amplitude=6pt}]
		(\xZero,-0.16) -- (\xMass,-0.16);
		\node at ({(\xZero+\xMass)/2},-0.55) {$\Delta \ell$};
	\end{tikzpicture}



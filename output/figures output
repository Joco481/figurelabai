5_6_Emech
	
	\begin{tikzpicture}
		\begin{axis}[
			xmin=0, xmax=6.28,         % ~2π
			ymin=0, ymax=1.05,
			axis x line=bottom,
			axis y line=left,
			axis line style={-stealth,black,thick}, % arrowed axes
			xtick=\empty, ytick=\empty,
			domain=0:6.28, samples=200,
			clip=false,
			xlabel={$t$}, ylabel={$E$}
			]
			
			% Potential energy: cos^2
			\addplot[xmblue, ultra thick] {cos(deg(x))^2};
			\node[xmblue, anchor=west] at (axis cs:6,0.82) {$E_{pot}$};
			
			% Kinetic energy: sin^2  (solid, not dotted)
			\addplot[xmgreen, ultra thick] {sin(deg(x))^2};
			\node[xmgreen, anchor=west] at (axis cs:6,0.12) {$E_{kin}$};
			
			% Total mechanical energy: constant (solid red)
			\addplot[xmred, ultra thick] {1};
			\node[xmred, above] at (axis cs:3.14,1) {$E_{mech}$};
			
		\end{axis}
	\end{tikzpicture}

5_7_sinus

	\begin{tikzpicture}[line cap=round, line join=round, scale=1.0]
		
		% --- Axes (arrowed), labels ---

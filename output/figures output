		to[battery1,invert] (\gap,\yT)
		-- (\xR,\yT) -- (\xR,\yB) -- (\bulbr,\yB);    % right wire now reaches lamp
		\draw (-\bulbr,\yB) -- (\xL,\yB) -- (\xL,\yT);      % left wire now reaches lamp
		

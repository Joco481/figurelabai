	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		% ----- knobs -----
		\def\L{8.2}          % total x-extent
		\def\A{1.05}         % amplitude
		\def\lam{4.0}        % wavelength
		\def\dotr{2.2pt}     % dot radius
		\def\nFlatDots{3}    % dots on the flat part (after λ/2)
		
		\pgfmathsetmacro\kdeg{360/\lam}
		
		% Axes
		\draw[axis] (0,-1.2) -- (0,1.7) node[above] {$y$};
		\draw[axis] (0,0) -- (\L,0) node[below] {$x$};
		
		% Wave: 0 .. λ/2  (sin so y(0)=0, peak at λ/4)
		\draw[xmgreen,very thick,domain=0:\lam/2,samples=140,variable=\x]
		plot({\x},{\A*sin(\kdeg*\x)});
		
		% Flat rope to the right
		\draw[xmgreen,very thick] ({\lam/2},0) -- (\L,0);
		
		% Dots
		\fill (0,0) circle (\dotr);              % origin
		\fill ({\lam/4},{\A}) circle (\dotr);    % crest
		\fill ({\lam/2},0) circle (\dotr);       % join
		\foreach \j in {1,...,\nFlatDots}{
			\fill ({\lam/2 + \j*(\L-\lam/2)/(\nFlatDots+1)}, 0) circle (\dotr);
		}
		
		% Red arrows
		\draw[vector,xmred] (0,0) -- ++(0,-1.0);        % down at origin
		\draw[vector,xmred] ({\lam/2},0) -- ++(0,1.0);  % up at the join
		
		% Time label
		\node[right] at (\L,0) {$t=\tfrac{T}{2}$};
	\end{tikzpicture}


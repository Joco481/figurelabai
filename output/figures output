			\foreach \y in {-4,...,4} \draw[dashed,xmblue!70,thick] (\xmin,\y) -- (\xmax,\y);
			
			% Axes
			\draw[axis] (\xmin,0) -- (\xmax,0) node[right] {$d \,(\text{m})$};
			\draw[axis] (0,\ymin) -- (0,\ymax) node[above] {$E_{\text{pot}} (\text{J})$};
			

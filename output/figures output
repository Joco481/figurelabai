5_5_krachten
	
	\begin{tikzpicture}[scale=1.0]
		% Parameters
		\def\nCoils{16}        % number of coils
		\def\springY{0}        % spring position (y=0)
		\def\xWall{0}          % wall position
		\def\xZero{6.0}        % equilibrium point
		\def\xMass{10.0}       % mass position
		\def\rMass{0.6}        % mass radius
		
		% Wall
		\fill[brown!80!black] (\xWall-0.6,-1) rectangle (\xWall+0.15,1);
		
		% Axis
		\draw[axis] (\xWall+0.15,\springY-0.85) -- (\xMass+2.5,\springY-0.85) node[below right] {$x$};
		
		% Equilibrium point
		\draw[densely dashed] (\xZero,-1.2) -- (\xZero,1.2);
		\fill (\xZero,\springY-0.85) circle (2.2pt);
		\node[below] at (\xZero+0.25,-0.1-0.85) {$0$};
		\node[below=6pt] at (\xZero,-0.25-0.85) {evenwichtspunt};
		
		% Spring
		\pgfmathsetmacro\xStart{\xWall+0.15}
		\pgfmathsetmacro\xEnd{\xMass-\rMass}
		\pgfmathsetmacro\kdeg{360*\nCoils/(\xEnd-\xStart)}
		\draw[xmblue,thick,domain=\xStart:\xEnd,samples=500,variable=\x]
		plot({\x},{\springY + 0.4*sin(\kdeg*(\x-\xStart))});
		
		% Mass (circle, same style as before)
		\fill[xmblue!60!black] (\xMass,\springY) circle (\rMass);
		
		% Forces
		% Fv (red, leftwards)
		\draw[vector,xmred] (\xMass,\springY) -- ++(-2.0,0)
		node[above=4pt] {$\vec{F}_v$};
		
		% FN (green, upwards)
		\draw[vector,xmgreen] (\xMass,\springY) -- ++(0,1.5)
		node[right] {$\vec{F}_N$};
		
		% Fz (orange, downwards)
		\draw[vector,xmyellow!80!black] (\xMass,\springY) -- ++(0,-1.5)
		node[right] {$\vec{F}_z$};
	\end{tikzpicture}

5_6_1_touw

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		% ------------ global knobs ------------
		\def\L{8.2}          % x-extent of each row
		\def\A{1.05}         % amplitude
		\def\lam{4.0}        % wavelength
		\def\dotr{2.2pt}     % dot radius
		\def\dy{4.0}         % vertical spacing between rows
		\pgfmathsetmacro\kdeg{360/\lam}
		
		% ========== Row 1 : t = 0 ==========
		\begin{scope}[shift={(0,4*\dy)}]
			\draw[axis] (0,-0.9) -- (0,1.6) node[above] {$y$};
			\draw[axis] (0,0) -- (\L,0) node[below right] {$x$};
			\draw[xmgreen,very thick] (0,0) -- (\L,0);
			\fill (0,0) circle (\dotr);
			\foreach \i in {1,...,6}{
				\fill ({\i*\L/7},0) circle (\dotr);
			}
			\draw[vector] (0,0) -- ++(0,1.2);
			\node[right] at (\L,0) {$t=0$};
		\end{scope}
		
		% ========== Row 2 : t = T/4 ==========
		\begin{scope}[shift={(0,3*\dy)}]
			\draw[axis] (0,-1.2) -- (0,1.7) node[above] {$y$};
			\draw[axis] (0,0) -- (\L,0) node[below right] {$x$};
			\draw[xmgreen,very thick,domain=0:\lam/4,samples=120,variable=\x]
			plot({\x},{\A*cos(\kdeg*\x)});
			\draw[xmgreen,very thick] ({\lam/4},0) -- (\L,0);
			\fill (0,{\A}) circle (\dotr);
			\fill ({\lam/4},0) circle (\dotr);
			\foreach \j in {1,...,4}{
				\fill ({\lam/4 + \j*(\L-\lam/4)/5}, 0) circle (\dotr);
			}
			\draw[vector,xmred] ({\lam/4},0) -- ++(0,1.0);
			\node[right] at (\L,0) {$t=\tfrac{T}{4}$};
		\end{scope}
		
		% ========== Row 3 : t = T/2 ==========
		\begin{scope}[shift={(0,2*\dy)}]
			\draw[axis] (0,-1.2) -- (0,1.7) node[above] {$y$};
			\draw[axis] (0,0) -- (\L,0) node[below right] {$x$};
			\draw[xmgreen,very thick,domain=0:\lam/2,samples=140,variable=\x]
			plot({\x},{\A*sin(\kdeg*\x)});
			\draw[xmgreen,very thick] ({\lam/2},0) -- (\L,0);
			\fill (0,0) circle (\dotr);
			\fill ({\lam/4},{\A}) circle (\dotr);
			\fill ({\lam/2},0) circle (\dotr);
			\foreach \j in {1,...,3}{
				\fill ({\lam/2 + \j*(\L-\lam/2)/4}, 0) circle (\dotr);
			}
			\draw[vector,xmred] (0,0) -- ++(0,-1.0);
			\draw[vector,xmred] ({\lam/2},0) -- ++(0,1.0);
			\node[right] at (\L,0) {$t=\tfrac{T}{2}$};
		\end{scope}
		
		% ========== Row 4 : t = 3T/4 ==========
		\begin{scope}[shift={(0,1*\dy)}]
			\draw[axis] (0,-1.3) -- (0,1.7) node[above] {$y$};
			\draw[axis] (0,0) -- (\L,0) node[below right] {$x$};
			\draw[xmgreen,very thick,domain=0:3*\lam/4,samples=160,variable=\x]
			plot({\x},{-\A*cos(\kdeg*\x)});
			\draw[xmgreen,very thick] ({3*\lam/4},0) -- (\L,0);
			\fill (0,{-\A}) circle (\dotr);
			\fill ({\lam/4},0) circle (\dotr);
			\fill ({\lam/2},{\A}) circle (\dotr);
			\fill ({3*\lam/4},0) circle (\dotr);
			\foreach \j in {1,...,2}{
				\fill ({3*\lam/4 + \j*(\L-3*\lam/4)/3}, 0) circle (\dotr);
			}
			\draw[vector,xmred] ({\lam/4},0) -- ++(0,-1.0);
			\draw[vector,xmred] ({3*\lam/4},0) -- ++(0,1.0);
			\node[right] at (\L,0) {$t=\tfrac{3T}{4}$};
		\end{scope}
		
		% ========== Row 5 : t = T (with λ) ==========
		\begin{scope}[shift={(0,0)}]
			\draw[axis] (0,-1.3) -- (0,1.8) node[above] {$y$};
			\draw[axis] (0,0) -- (\L,0) node[below right] {$x$};
			\draw[xmgreen,very thick,domain=0:\lam,samples=160,variable=\x]
			plot({\x},{-\A*sin(\kdeg*\x)});
			\draw[xmgreen,very thick] ({\lam},0) -- (\L,0);
			\fill (0,0) circle (\dotr);
			\fill ({\lam/4},{-\A}) circle (\dotr);
			\fill ({\lam/2},0) circle (\dotr);
			\fill ({3*\lam/4},{\A}) circle (\dotr);
			\fill ({\lam},0) circle (\dotr);
			\fill ({\lam + 0.9},0) circle (\dotr);
			\draw[vector,xmred] (0,0) -- ++(0,1.1);
			\draw[vector,xmred] ({\lam/2},0) -- ++(0,-1.0);
			\draw[vector,xmred] ({\lam},0) -- ++(0,1.1);
			\draw[<->] (0,-1.2) -- ({\lam},-1.2) node[midway,below] {$\lambda$};
			\node[right] at (\L,0) {$t=T$};
		\end{scope}
	\end{tikzpicture}

5_6_1_touw1

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		% ----- knobs -----
		\def\L{8.2}          % x-extent of the rope/axis
		\def\yA{0}           % rope lies on y = 0
		\def\nDots{6}        % number of interior dots
		\def\dotr{2.2pt}     % dot radius
		
		% Axes
		\draw[axis] (0,-0.9) -- (0,1.6) node[above] {$y$};
		\draw[axis] (0,\yA) -- (\L,\yA) node[below right] {$x$};
		
		% Rope (flat) + dots
		\draw[xmgreen,very thick] (0,\yA) -- (\L,\yA);
		% left endpoint dot
		\fill (0,\yA) circle (\dotr);
		% interior dots evenly spaced
		\foreach \i in {1,...,\nDots}{
			\fill ({\i*\L/(\nDots+1)}, {\yA}) circle (\dotr);
		}
		
		% Upward velocity arrow at the origin
		\draw[vector] (0,\yA) -- ++(0,1.2);
		
		% Time label
		\node[right] at (\L,0) {$t=0$};
	\end{tikzpicture}
	


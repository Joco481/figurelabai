7_11_equipotentiaal

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		
		% ====== LEFT: Homogeen veld ======
		\begin{scope}[shift={(0,0)}]
			% Knobs
			\def\H{4.6}
			\def\w{0.9}
			\def\xL{0.0}
			\def\xR{6.0}
			\def\rq{0.22}
			
			% Title
			\node[font=\bfseries\itshape\Large] at (3.2,5.2) {Homogeen veld};
			
			% --- Field lines first (so plates cover them) ---
			\foreach \yy in {0.75,1.65,2.55,3.45,4.35}{
				\draw[xmgreen,very thick,
				postaction={decorate,
					decoration={markings, mark=at position 0.50 with {\arrow{Stealth}}}
				}] (\xR+\w-0.15,\yy) -- (\xL+0.15,\yy);
			}
			
			% Equipotentials (exactly two)
			\foreach \xx in {\xL+\w+1.9,\xL+\w+3.7}{
				\draw[xmaccent,thick] (\xx,0) -- (\xx,\H);
			}
			
			% --- Plates drawn after field lines (on top) ---
			% Left negative plate (5 charges, evenly spaced)
			\fill[red!65] (\xL,0) rectangle ++(\w,\H);
			\draw[brown!70!black,thick] (\xL,0) rectangle ++(\w,\H);
			\foreach \k [count=\i from 0] in {5}{
				\pgfmathsetmacro{\y}{0.5*\H/(\k+1) + \i*\H/(\k+1)}
			}
			\foreach \i in {1,...,5}{
				\pgfmathsetmacro{\y}{\i*\H/6}
				\fill[xmred] (\xL+0.5*\w,\y) circle(\rq);
				\node[white,font=\large] at (\xL+0.5*\w,\y) {$-$};
			}
			
			% Right positive plate (6 charges, evenly spaced)
			\fill[xmblue!35] (\xR,0) rectangle ++(\w,\H);
			\draw[xmblue!70!black,thick] (\xR,0) rectangle ++(\w,\H);
			\foreach \i in {1,...,6}{
				\pgfmathsetmacro{\y}{\i*\H/7}
				\fill[xmblue!80] (\xR+0.5*\w,\y) circle(\rq);
				\node[white,font=\large] at (\xR+0.5*\w,\y) {$+$};
			}
		\end{scope}
		
		% ====== RIGHT: Radiaal veld ======
		\begin{scope}[shift={(11,0)}]
			\def\R{3.3}
			\coordinate (C) at (3.0,2.6);
			
			% Title above
			\node[font=\bfseries\itshape\Large] at ($(C)+(0,\R+0.8)$) {Radiaal veld};
			
			% Radial field lines first (single arrow halfway)
			\foreach \a in {0,45,...,315}{
				\draw[xmgreen,very thick,
				postaction={decorate,
					decoration={markings, mark=at position 0.50 with {\arrow{Stealth}}}
				}] (C) -- ++(\a:\R);
			}
			
			% Equipotential circles on top of lines
			\foreach \r in {0.8,1.6,2.4,3.2}{
				\draw[xmaccent,thick] (C) circle (\r);
			}
			
			% Central positive charge on top
			\fill[xmblue!70] (C) circle (0.33);
			\draw[xmblue!90!black,thick] (C) circle (0.33);
			\node[white,font=\large] at (C) {$+$};
		\end{scope}
	\end{tikzpicture}


			}
			
		\end{axis}
	\end{tikzpicture}

14_4_halvering

	\begin{tikzpicture}
		\begin{axis}[
			ownstyle,
			axis equal=false,
			scale only axis=true,
			enlargelimits=false,
			width=12.5cm, height=7.2cm,
			xmin=0, xmax=5.5,
			ymin=0, ymax=1.1,
			xtick={0,1,2,3,4,5},
			xticklabels={$0$,$T$,$2T$,$3T$,$4T$,$5T$},
			ytick={0,0.125,0.25,0.5,1.0},
			yticklabels={,$N_0/8$,$N_0/4$,$N_0/2$,$N_0$},
			grid=both,
			grid style={xmblue!70,dashed,thick},
			axis line style={-stealth,black,thick},
			xlabel={$t$},
			ylabel={$N$},
			every axis y label/.style={at={(axis description cs:0,1)},anchor=south east},
			every axis x label/.style={at={(axis description cs:1,0)},anchor=north west},
			clip=false
			]
			
			% ===== Long half-life:  N = exp(-ln2 * x) =====
			\addplot[xmgreen,ultra thick,domain=0:5.5,samples=200] {exp(-ln(2)*x)};
			
			% Dots at integer multiples of T
			\foreach \k in {1,2,3,4,5}{
				\addplot[only marks,mark=*,mark size=2.5pt,color=xmgreen]
				coordinates {(\k,{exp(-ln(2)*\k)})};
			}
			% Top-left green dot at (0,N0)
			\addplot[only marks,mark=*,mark size=2.8pt,color=xmgreen]
			coordinates {(0,1)};
			
			% ===== Short half-life:  N = exp(-ln2 * x / 0.5)  (i.e., T_short = 0.5 T) =====
			\addplot[xmaccent,thick,dashed,domain=0:3.0,samples=200]
			{exp(-ln(2)*x/0.5)};
			
			% A few orange dots (roughly every 0.5T)
			\foreach \x in {0.5,1.0,1.5,2.0,2.5}{
				\addplot[only marks,mark=*,mark size=2.6pt,color=xmaccent]
				coordinates {(\x,{exp(-ln(2)*\x/0.5)})};
			}
			
			% ===== Black origin dot =====
			\addplot[only marks,mark=*,mark size=3.2pt,black] coordinates {(0,0)};
			
			% ===== Custom legend (lines + text), positioned like the PNG =====
			% Green solid sample line + label
			\draw[xmgreen,ultra thick] (rel axis cs:0.49,0.62) --++ (1.6,0);
			\node[anchor=west,xmgreen] at (rel axis cs:0.65,0.62) {Lange halveringstijd};
			
			% Orange dashed sample line + label
			\draw[xmaccent,thick,dashed] (rel axis cs:0.49,0.48) --++ (1.6,0);
			\node[anchor=west,xmaccent] at (rel axis cs:0.65,0.48) {korte halveringstijd};
			
		\end{axis}
	\end{tikzpicture}


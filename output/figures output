	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		% ----- knobs -----
		\def\L{8.2}          % total x-extent
		\def\A{1.05}         % amplitude
		\def\lam{4.0}        % wavelength
		\def\dotr{2.2pt}     % dot radius
		\def\nFlatDots{2}    % dots on the flat part (after 3λ/4)
		\pgfmathsetmacro\kdeg{360/\lam}
		
		% Axes
		\draw[axis] (0,-1.3) -- (0,1.7) node[above] {$y$};

5_6_2_golffront

	\begin{tikzpicture}[scale=1.0,line cap=round,line join=round]
		% --- knobs ---
		\def\lam{0.90}     % radial spacing (= wavelength)
		\def\nWaves{4}     % number of wavefronts
		\def\Rmax{4.1}     % ray length
		\def\span{90}      % half angular span of arcs (deg)
		
		% Source
		\fill (0,0) circle (2.6pt) node[left] {bron};
		
		% Circular wavefronts
		\foreach \i in {1,...,\nWaves}{
			\draw[xmgreen,line width=2.2pt]
			(-\span:\i*\lam) arc[start angle=-\span,end angle=\span,radius=\i*\lam];
		}
		
		% Rays
		\foreach \ang in {-45,-22.5,0,22.5,45}{
			\draw[->,thick] (0,0) -- ++(\ang:\Rmax);
		}
		\node[above right] at (30:\Rmax) {\textit{golfstraal}};
		
		% Wavelength marker (between first two fronts)
		\draw[<->] (90:\lam) -- (90:2*\lam);
		\node[left] at (90:1.5*\lam) {$\lambda$};
		
		% Caption
		\node at (1.5,-4.0) {Circulair golffront};
	\end{tikzpicture}


12_2_lorentzkracht

	\begin{figure}[H]
		\centering
		\begin{tikzpicture}[line cap=round,line join=round,>=latex,scale=1.0]
			
			% ---------- knobs (easy to tweak) ----------
			\def\s{1.45}          % spacing of the B symbols
			\def\R{0.36}          % radius of the B circles
			\def\d{0.24}          % half-length of the X strokes
			\def\r{0.44}          % radius of the charge
			\def\vx{1.35}         % velocity arrow length
			\def\fy{1.35}         % force arrow length
			\def\xgap{5.1}        % gap between left and right panels
			
			% ---------- helper: one B "X-in-circle" ----------
			\newcommand{\Bin} [2]{%
				\draw[xmgreen,thick] (#1,#2) circle (\R);
				\draw[xmgreen,thick] (#1-\d,#2+\d) -- (#1+\d,#2-\d);
				\draw[xmgreen,thick] (#1-\d,#2-\d) -- (#1+\d,#2+\d);
			}
			
			% ---------- helper: the 2x3 B grid around (0,0) ----------
			\newcommand{\Bgrid}{%
				\foreach \X in {-1,0,1} { \Bin{\X*\s}{\s}; \Bin{\X*\s}{-\s}; }
			}
			
			% ==========================================
			% ============ LEFT: q > 0 =================
			% ==========================================
			\begin{scope}[shift={(0,0)}]
				
				% background B field
				\Bgrid
												
				% velocity (right), start just outside the disk
				\draw[->,line width=2pt,xmblue,shorten <=\r+0.06] (0,0) -- (\vx,0)
				node[pos=0.68,below=3pt] {$\vec{v}$};
				
				% force (up), start just outside the disk
				\draw[->,line width=2.2pt,black,shorten <=\r+0.06] (0,0) -- (0,\fy)
				node[pos=0.55,left=4pt] {$\vec{F}$};
				
				% labels
				\node[scale=1.05] at (1.8*\s,1.12*\s) {$\vec{B}$};
				
				% charge (+)
				\fill[xmred] (0,0) circle (\r);
				\draw[white,line width=2.2pt] (-0.20,0) -- (0.20,0);
				\draw[white,line width=2.2pt] (0,-0.20) -- (0,0.20);

				
			\end{scope}
			
			% ==========================================
			% ============ RIGHT: q < 0 =================
			% ==========================================
			\begin{scope}[shift={(\xgap,0)}]
				
				% background B field
				\Bgrid
				
								% velocity (right)
				\draw[->,line width=2pt,xmblue,shorten <=\r+0.06] (0,0) -- (\vx,0)
				node[pos=0.68,below=3pt] {$\vec{v}$};
				
				% force (down)
				\draw[->,line width=2.2pt,black,shorten <=\r+0.06] (0,0) -- (0,-\fy)
				node[pos=0.55,left=4pt] {$\vec{F}$};
				% labels
				\node[scale=1.05] at (1.8*\s,1.12*\s) {$\vec{B}$};
				
				% charge (–)
				\fill[xmblue] (0,0) circle (\r);
				\draw[white,line width=2.2pt] (-0.22,0) -- (0.22,0);
				

				
			\end{scope}
			
		\end{tikzpicture}
	\end{figure}


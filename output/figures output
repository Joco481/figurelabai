8_4_weerstand

	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		
		% -------- Top frame + horizontal battery --------
		\draw[thick] (-2,0) -- (1.6,0);
		\draw (1.6,0) to[battery1,invert] (3.0,0);
		\draw[thick] (3.0,0) -- (8,0);
		\draw[thick] (-2,0) -- (-2,-3.0);
		\draw[thick] (8,0)  -- (8,-3.0);
		
		% --------------- Cylindrical resistor ---------------
		\begin{scope}[shift={(0,-3.0)}]
			\def\L{6.2}  \def\a{0.38}  \def\b{0.85}
			
			% body
			\fill[xmblue!10]
			(0,-\b) -- (\L,-\b)
			arc[start angle=-90,end angle=90, x radius=\a, y radius=\b]
			-- (0,\b)
			arc[start angle=90,end angle=-90, x radius=\a, y radius=\b] -- cycle;
			
			% top/bottom edges
			\draw[thick,xmblue] (0,\b) -- (\L,\b);
			\draw[thick,xmblue] (0,-\b) -- (\L,-\b);
			
			% LEFT end-cap: fill; left half solid, right half dashed
			\fill[xmblue!10] (0,0) ellipse [x radius=\a, y radius=\b];
			\draw[thick,xmblue] (0,\b)
			arc[start angle=90,end angle=-90, x radius=-\a, y radius=\b];   % left half (solid)
			\draw[dashed,thick,xmblue] (0,\b)
			arc[start angle=90,end angle=-90, x radius=\a, y radius=\b];   % right half (dashed)
			
			% RIGHT end-cap
			\draw[thick,xmblue] (\L,0) ellipse [x radius=\a, y radius=\b];
			
			% leads, dots, labels
			\draw[thick] (-2,0) -- (0,0);
			\draw[thick] (8,0)  -- (\L,0);
			\fill (0,0) circle (2.5pt);
			\fill (\L,0) circle (2.5pt);
			\node[left]  at (-0.70,0.2) {\Large\bfseries 1};
			\node[right] at (\L+0.70,0.2) {\Large\bfseries 2};
			
			% current and voltage arrows
			\draw[-latex,ultra thick] (5.0,0) -- (1.2,0);
			\node[font=\itshape\Large] at (3.1,0.35) {Conventionele stroom $I$};
			\draw[-latex,xmred,ultra thick] (1.2,-1.45) -- (5.0,-1.45);
			\node[font=\itshape\Large,xmred] at (3.1,-1.85) {$U_R$};
		\end{scope}
		
	\end{tikzpicture}



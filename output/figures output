		\draw[axis] (0,0) -- (0,4.2) node[above left] {$p$};
		
		% Key points (easy to tweak)
		\coordinate (TP) at (2.20,2.10);   % triple point
		\coordinate (CP) at (5.10,3.00);   % critical point
		
		% ---------- Phase boundaries ----------
		% Sublimation curve (solid–gas): origin -> triple point
		\draw[xmgreen,ultra thick,smooth]
		(0,0) .. controls (0.9,0.20) and (1.5,0.80) .. (TP);
		
		% Liquid–gas curve: triple point -> critical point
		\draw[xmgreen,ultra thick,smooth]
		(TP) .. controls (3.05,2.05) and (4.15,2.40) .. (CP);
		
		% Solid–liquid line (steeper)
		\draw[xmgreen,ultra thick] (TP) -- ++(0.75,1.55);
		
		% ---------- Markers ----------
		\fill (TP) circle (2.6pt);
		\node[left=3pt] at (TP) {tripelpunt};
		
		\fill (CP) circle (2.6pt);
		\node[right=4pt] at (CP) {kritisch punt};
		
		% ---------- Region labels ----------
		\node[font=\itshape,anchor=west] at (0.5,3.15) {VAST};
		\node[font=\itshape]             at (3.90,1.00) {GAS};
		
		% "VLOEIBAAR" along the solid–liquid line
		\node[black,rotate=40,anchor=west] at ($(TP)+(0.45,0.2)$) {VLOEIBAAR};
		
	\end{tikzpicture}


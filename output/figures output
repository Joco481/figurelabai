	\begin{tikzpicture}[line cap=round,line join=round,scale=1.0]
		% ---- knobs ----
		\def\rings{0.78,1.35,2.05,2.85}  % ring radii (inner ring moved out)
		\def\cxL{-4.8}                   % left center x
		\def\cxR{ 4.8}                   % right center x
		\def\arrowspan{15}               % half-span (deg) of the small arrow arc
		\def\capy{-3.2}                  % y for captions
		
		% ---------------- LEFT: I out of page (CCW B) ----------------
		\begin{scope}[shift={(\cxL,0)}]
			% rings + right-side arrows (CCW)
			\foreach \r in \rings {
				\draw[xmgreen,very thick] (0,0) circle (\r);
				\draw[xmgreen,very thick,->]
				({\r*cos(-\arrowspan)},{\r*sin(-\arrowspan)})
				arc[start angle=-\arrowspan, end angle=\arrowspan, radius=\r];
			}
			% current-out symbol
			\draw[xmred,very thick] (0,0) circle (0.55);
			\fill[xmred] (0,0) circle (0.22);
			
			% caption
			\node[font=\small] at (0,\capy) {$I$ out of page};
		\end{scope}
		
		% ---------------- RIGHT: I into page (CW B) ----------------
		\begin{scope}[shift={(\cxR,0)}]
			\foreach \r in \rings {
				\draw[xmgreen,very thick] (0,0) circle (\r);
				\draw[xmgreen,very thick,->]
				({\r*cos(\arrowspan)},{\r*sin(\arrowspan)})
				arc[start angle=\arrowspan, end angle=-\arrowspan, radius=\r];
			}
			% current-in symbol
			\draw[xmred,very thick] (0,0) circle (0.55);
			\pgfmathsetmacro\a{0.39}
			\draw[xmred,very thick] (-\a,-\a) -- (\a,\a);
			\draw[xmred,very thick] (-\a,\a)  -- (\a,-\a);
			
			% caption
			\node[font=\small] at (0,\capy) {$I$ into page};
		\end{scope}
	\end{tikzpicture}
	


Elektrische_potentiele_energie

	\begin{tikzpicture}[line cap=round,line join=round,>=latex,scale=1.0]
		
		% -------- parameters (easy to tweak) --------
		\def\W{12.0}    % total width  (right plate at x=\W)
		\def\H{6.8}     % plate height
		\def\pad{0.75}  % inset of field lines from plates
		\def\xc{6.1}    % x of the chevrons (visual center)
		
		% -------- plates + signs --------
		\draw[black,very thick] (0,0) -- (0,\H);
		\draw[black,very thick] (\W,0) -- (\W,\H);
		\node[font=\Large,above] at (0,\H) {$-$};
		\node[font=\Large,above] at (\W,\H) {$+$};
		
		% -------- uniform field lines with chevrons --------
		% choose y-levels that avoid the charge height (we'll put Q at y=3.60)
		\foreach \y in {0.7,1.5,2.3,3.0,3.9,4.7,5.5,6.3}{
			\draw[xmgreen,very thick] (\W-\pad,\y) -- (\pad,\y);
			% chevron pointing left
			\draw[xmgreen,very thick] (\xc+0.22,\y+0.14) -- (\xc,\y) -- (\xc+0.22,\y-0.14);
		}
		
		% -------- charge position (moved up) --------
		\coordinate (Q) at (8.20,3.60);
		
		% -------- draw the force vector FIRST (so it sits underneath the charge) ------
		\draw[vector] (Q) -- ++(-2.4,0);   % your 'vector' style = red, ultra thick, -latex
		
		% -------- brace d: from negative plate inner edge to the charge ----------
		% place it a bit below the charge to avoid the field line
		\draw[xmblue!70,thick,decorate,decoration={brace,mirror,amplitude=7pt}]
		(0,2.85) -- (8.20,2.85) node[midway,below=5pt,black] {$d$};
		
		% -------- draw the positive test charge ON TOP (blue disk with white plus) ----
		\fill[xmblue] (Q) circle (0.18);
		\draw[white,line width=0.9pt] ($(Q)+(-0.10,0)$) -- ($(Q)+(0.10,0)$);
		\draw[white,line width=0.9pt] ($(Q)+(0,-0.10)$) -- ($(Q)+(0,0.10)$);
		\node[anchor=west] at ($(Q)+(0.40,0.05)$) {$Q_0$};
		
	\end{tikzpicture}

